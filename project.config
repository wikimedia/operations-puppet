[access "refs/*"]
	owner = group ldap/ops
	submit = group ldap/ops
	rebase = group Registered Users
[project]
	description = Public puppet repository for Wikimedia Foundation operations team.
[receive]
	requireChangeId = true
	maxObjectSizeLimit = 20m
[submit]
	mergeContent = false
	action = fast forward only
[allowSuperproject "operations/puppet"]
	all = refs/heads/master:refs/heads/*
[subscribe "operations/puppet"]
	refs = refs/heads/master:refs/heads/*
