			owner => 'root',
			group => 'wikidev',
			mode => 0740,
			source => 'puppet:///private/misc/fundraising/amazon-audit.cfg';
	}

	cron {
		'collect_exim_stats_via_gmetric':
			user => 'root',
			command => '/usr/local/bin/collect_exim_stats_via_gmetric',
			ensure => present;
