apiVersion: v1
kind: Config
preferences: {}
current-context: default-system
contexts:
- name: default-system
  context:
    cluster: default-cluster
    user: <%= @username %>
    <%- if @namespace -%>
    namespace: <%= @namespace %>
    <%- end -%>
clusters:
- name: default-cluster
  cluster:
    server: https://<%= @master_host %>:6443
    <%- if @auth_cert -%>
    certificate-authority: <%= @auth_cert['chain'] %>
    <%- end -%>
users:
- name: <%= @username %>
  user:
    <%- if @auth_cert -%>
    client-certificate: <%= @auth_cert['cert'] %>
    client-key: <%= @auth_cert['key'] %>
    <%- elsif @token -%>
    token: <%= @token %>
    <%- end -%>