[Unit]
Description=Deploy alerts from git to Prometheus/Thanos (instance %I)

[Service]
Type=oneshot
User=alerts-deploy
SyslogIdentifier=alerts-deploy@%I
# Nothing deployed is fine
SuccessExitStatus=42
ExecStart=/usr/local/bin/alerts-deploy --cleanup \
  --alerts-dir <%= @alerts_dir %> \
  <%= @deploy_tag ? "--deploy-tag #{@deploy_tag}" : '' %> \
  <%= @deploy_site ? "--deploy-site #{@deploy_site}" : '' %> \
  <%= @deploy_dir %>

[Install]
WantedBy=alerts-deploy.target
