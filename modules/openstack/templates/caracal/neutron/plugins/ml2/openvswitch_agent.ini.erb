[DEFAULT]


[agent]
tunnel_types = vxlan
vxlan_udp_port = 4789
l2_population = false


[dhcp]


[network_log]


[ovs]
integration_bridge = br-int
tunnel_bridge = br-tun
local_ip = <%= @overlay_address %>
<%- if @provider_networks -%>
bridge_mappings = <%= @provider_networks.map { |name, config| "#{name}:#{config['bridge']}" }.join(',') %>
<%- end -%>

[securitygroup]
firewall_driver = openvswitch
enable_security_group = True
enable_ipset = True
