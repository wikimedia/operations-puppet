# common openstack-wide keystone access
[keystone_authtoken]
auth_type = password
www_authenticate_uri = https://<%= @keystone_fqdn %>:25000
auth_url = https://<%= @keystone_fqdn %>:25357
password = <%= @ldap_user_pass %>
project_domain_id = default
project_name = <%= @keystone_auth_project %>
region_name = <%= @region %>
user_domain_id = default
username = <%= @keystone_auth_username %>
memcached_servers = <%= @memcached_nodes.map{|host| "#{host}:11211"}.join(",") %>
service_token_roles = admin, service
service_token_roles_required = true
