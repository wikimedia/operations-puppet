# vim: filetype=apache

# This config is behind misc-web which handles ssl for us.
<VirtualHost *:80>
    ServerName <%= @webserver_hostname %>

    RewriteEngine on
    RewriteCond %{HTTP:X-Forwarded-Proto} !https
    RewriteCond %{REQUEST_URI} !^/status$
    RewriteRule ^/(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,E=ProtoRedirect]
    Header always merge Vary X-Forwarded-Proto env=ProtoRedirect

    WSGIScriptAlias / /srv/deployment/horizon/deploy/horizon/openstack_dashboard/wsgi/django.wsgi
    WSGIDaemonProcess horizon user=horizon group=horizon processes=3 threads=10 python-home=<%= @venv_dir %>
    WSGIProcessGroup horizon

    Alias /static <%= @venv_dir %>/usr/share/openstack-dashboard/openstack_dashboard/static/
    <Directory <%= @venv_dir %>/srv/deployment/horizon/deploy/horizon/openstack_dashboard/wsgi>
        Require all granted
    </Directory>
</VirtualHost>
