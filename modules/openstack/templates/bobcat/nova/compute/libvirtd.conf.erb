# 1->4 debug levels
#log_level = 3

unix_sock_group = "<%= @libvirt_unix_sock_group %>"
unix_sock_rw_perms = "0770"
auth_unix_ro = "none"
auth_unix_rw = "none"
auth_tcp = "sasl"

# Note that I've tried varying the following filenames/filepaths
#  and that seems to confuse libvirtd
key_file = "<%= @certpath %>/clientkey.pem"
cert_file = "<%= @certpath %>/clientcert.pem"
ca_file = "<%= @certpath %>/cacert.pem"
tls_allowed_dn_list = [
<% @all_cloudvirts.sort.each do |host| -%>
                       "CN=<%= host %>",
<% end -%>
    ]
