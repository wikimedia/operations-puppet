[DEFAULT]
# neutron.agent.linux.interface.BridgeInterfaceDriver
interface_driver = linuxbridge
dhcp_driver = neutron.agent.linux.dhcp.Dnsmasq
dnsmasq_config_file = /etc/neutron/dnsmasq-neutron.conf

# only useful when l3-agent is not the default gateway or
# l3-agent and metadata-agent are not on the same host
# -> injects a route directly to metadata agent
enable_isolated_metadata = False

# allow cleanup since our namespace management is modern
dhcp_delete_namespaces = true

[AGENT]
report_interval = <%= @report_interval %>
