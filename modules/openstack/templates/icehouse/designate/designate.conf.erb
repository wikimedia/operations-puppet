########################
## Storage Configuration
########################
#-----------------------
# SQLAlchemy Storage
#-----------------------
[storage:sqlalchemy]
# Database connection string - to configure options for a given implementation
# like sqlalchemy or other see below
database_connection = mysql://<%= designateconfig["db_user"] %>:<%= designateconfig["db_pass"] %>@<%= designateconfig["db_host"] %>/<%= designateconfig["db_name"] %>
connection_debug = 100
connection_trace = True
idle_timeout = 3600
max_retries = 10
retry_interval = 10

