server {
    listen 8100;

    # Wrap the normal API but only allow GETs.
    location / {
        proxy_pass http://127.0.0.1:8101;

        limit_except GET {
            deny all;
        }

        allow 127.0.0.7;
<% @all_puppetmasters.each do |node| -%>
        allow <%= scope.function_ipresolve([node]) %>;
<% end -%>
        allow <%= @labs_instance_range %>;
        deny all;
    }
}
