# https://docs.openstack.org/mitaka/config-reference/networking/networking_options_reference.html#l3-agent
[DEFAULT]
# default but important
# enough to be explicit
agent_mode = legacy

# These are WMF custom config values
# T168580
routing_source_ip = <%= @network_public_ip %>
# T167357
dmz_cidr = <%= @dmz_cidr %>

router_delete_namespaces = true

# neutron.agent.linux.interface.BridgeInterfaceDriver
interface_driver = linuxbridge

# The external_network_bridge option
# intentionally lacks a value to enable
# multiple external networks on a single agent.
external_network_bridge =

handle_internal_only_routers = True
enable_metadata_proxy = True

[AGENT]
