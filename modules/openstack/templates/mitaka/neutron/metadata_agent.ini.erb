# The metadata proxy service in the namespace
# sends the request to the Neutron metadata agent
# service via a Unix socket.
#
# metadata-agent then forwards to the nova metadata API
# with a 'Instance-ID' header and the shared secret to
# reverse proxies the reply.

[DEFAULT]
# hostname is acceptable here
nova_metadata_ip = <%= @nova_controller %>
metadata_proxy_shared_secret = <%= @metadata_proxy_shared_secret %>
nova_metadata_protocol = http

