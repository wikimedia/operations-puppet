#!/bin/sh
alias errcho='>&2 echo'

PROJECT=$1
DIRECTORY=/var/local/labs-root-passwords

if [ -z "$PROJECT" ]; then
    errcho "No project name specified."
    exit 1
fi

if [ ! -d "$DIRECTORY" ]; then
    errcho "Directory for passwords not found."
    exit 1
fi

if [ -f $DIRECTORY/$PROJECT ]; then
  PASSWORD=$(cat $DIRECTORY/$PROJECT)
else
  PASSWORD=$(pwgen -nc 24 1)
  umask 027
  echo $PASSWORD > $DIRECTORY/$PROJECT
fi

# Only read the cached .hash file if it is newer than the
# corresponding password file.
if [ -f $DIRECTORY/$PROJECT.hash -a $DIRECTORY/$PROJECT.hash -nt $DIRECTORY/$PROJECT ]; then
  HASH=$(cat $DIRECTORY/$PROJECT.hash)
else
  HASH=$(mkpasswd -m sha-512 $PASSWORD)
  umask 027
  echo $HASH > $DIRECTORY/$PROJECT.hash
fi

# Write the mkpasswd output without the ending newline
echo -n $HASH
