#!/bin/bash
# Phabricator's phd

start() {
        env PHABRICATOR_ENV=phd
        echo -n "Starting phd service: "
        /srv/phab/phabricator/bin/phd start
        success $"PHD service startup"
}

stop() {
        env PHABRICATOR_ENV=phd
        echo -n "Stopping PHD service: "
        /srv/phab/phabricator/bin/phd stop
}

### main logic ###
case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart|reload)
        stop
        start
        ;;
  status)
        /srv/phab/phabricator/bin/phd status
        exit 3
        ;;
  *)
        echo $"Usage: $0 {start|stop|restart|reload|status}"
        exit 1
esac

exit 0
