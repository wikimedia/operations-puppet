<%
 addresses = []
 @listen_addresses.each do |addr|
    if addr.include? ":" then
      addr.sub!('[','').sub!(']','')
      addresses << addr + '/128'
    else
      addresses << addr + '/32'
    end
 end
-%>
saddr (0.0.0.0/0 ::/0) daddr (<%= addresses.join(' ') %>) proto tcp dport (<%= ssh_port %>) ACCEPT;
