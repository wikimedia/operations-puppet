[Unit]
Description=phabricator-phd
After=syslog.target network.target mysql.service
Before=apache2.service

[Service]
Type=forking
User=phd
Group=phd
Environment="PHABRICATOR_ENV=phd"
ExecStartPre=-/usr/bin/mkdir /var/run/phd
ExecStartPre=/usr/bin/chown -R phd:phd /var/run/phd/
ExecStart=/srv/phab/phabricator/bin/phd start --force
ExecStop=/srv/phab/phabricator/bin/phd stop --force
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
