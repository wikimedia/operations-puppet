# Apache configuration for Phabricator (<%= @phab_servername %>)
# This file is managed by Puppet.

<VirtualHost 127.0.0.1:80>
  # Change this to the domain which points to your host.
  ServerName http://<%= @fqdn %>
  DocumentRoot <%= @basedir %>/phabricator/webroot

  <Directory "<%= @basedir %>/phabricator/webroot">
    Options Indexes FollowSymLinks MultiViews
    Require all granted
  </Directory>

  RewriteEngine on
  RewriteRule ^/rsrc/(.*)     -                       [L,QSA]
  RewriteRule ^/favicon.ico   -                       [L,QSA]
  RewriteRule ^(.*)$          /index.php?__path__=$1  [B,L,QSA,UnsafeAllow3F]
</VirtualHost>
