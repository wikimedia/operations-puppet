#!/bin/bash

arping_result=`/usr/sbin/arping -i <%= @interface_primary %> -c 1 -C 1 <%= @ipaddress %> -S 0.0.0.0 -r`

if [[ $? == 0 ]]; then # We got a reply
echo "ARP reply from MAC $arping_result"
exit 2
elif [[ $? == 1 ]]; then # No reply
echo "No ARP reply for primary IP"
exit 0
else
echo "Unknown result"
exit 3
fi
