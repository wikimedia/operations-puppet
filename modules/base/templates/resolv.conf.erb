# Resolver configuration for site <%= @site %>
search <%= Array(@domain_search).join(' ') %>
options timeout:3
<% if @nameservers_override.nil? -%>
<% @nameservers.each do |nameserver| -%>
nameserver <%= nameserver %>
<% end -%>
<% else -%>
<% @nameservers_override.each do |nameserver| -%>
nameserver <%= nameserver %>
<% end -%>
<% end -%>
