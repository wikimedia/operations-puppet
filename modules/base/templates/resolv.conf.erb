# Resolver configuration for site <%= @site %>
<%- ip = scope.lookupvar('::ipaddress') -%>
search <%= Array(@domain_search).join(' ') %>
options timeout:1 attempts:3
<% @nameservers.select{|ns| ns != ip }.each do |nameserver| -%>
nameserver <%= nameserver %>
<% end -%>
