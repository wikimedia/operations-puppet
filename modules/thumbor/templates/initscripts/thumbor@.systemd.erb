[Unit]
Description=Thumbor image manipulation service (instance %i)
PartOf=thumbor-instances.service
After=systemd-tmpfiles-setup.service

[Service]
Type=simple
ExecStart=/usr/bin/firejail --profile=/etc/firejail/thumbor.profile --env=TMPDIR=/srv/thumbor/tmp/thumbor@%i --env=MAGICK_TEMPORARY_PATH=/srv/thumbor/tmp/thumbor@%i --env=MAGICK_TIME_LIMIT=60 --env=MAGICK_DISK_LIMIT=900MB --env=MAGICK_MEMORY_LIMIT=900MB -- /usr/bin/thumbor --port %i --ip 127.0.0.1 --keyfile /etc/thumbor.key --conf /etc/thumbor.d/
User=thumbor
PrivateTmp=yes
Restart=always
SyslogIdentifier=thumbor@%i
MemoryLimit=1G
LimitFSIZE=1G

[Install]
WantedBy=multi-user.target
