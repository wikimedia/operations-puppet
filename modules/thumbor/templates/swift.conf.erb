## The result storage thumbor should use to store generated images. This must be
## the full name of a python module (python must be able to import it)
## Defaults to: None
RESULT_STORAGE = 'wikimedia_thumbor.result_storage.swift'

SWIFT_HOST = '<%= @swift_host %>'
SWIFT_API_PATH = '/v1/AUTH_<%= @swift_account %>/'
SWIFT_AUTH_PATH = '/auth/v1.0'
SWIFT_USER = '<%= @swift_account %>:<%= @swift_user %>'
SWIFT_KEY = '<%= @swift_key %>'
SWIFT_PATH_PREFIX = 'thumbor/'
SWIFT_SHARDED_CONTAINERS = [
  <%- @swift_sharded_containers.sort.each do |container| -%>
    '<%= container %>',
  <%- end %>
]
SWIFT_CONNECTION_TIMEOUT = 5
# Needs to be at least 1 due to bug in python-swiftclient < 3.1.0 https://bugs.launchpad.net/gnocchi/+bug/1589926
SWIFT_RETRIES = 1