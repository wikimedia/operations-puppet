user_agent: ChangePropagation/WMF
spec:
  x-sub-request-filters:
    - type: default
      name: http
      options:
        allow:
          - pattern: /^https?:\/\//
            forward_headers:
              user-agent: true
  title: The Change Propagation root
  paths:
    /{api:sys}/purge:
      x-modules:
        - path: src/sys/purge.js
          options:
            host: <%= @purge_host %>
            port: <%= @purge_port %>
