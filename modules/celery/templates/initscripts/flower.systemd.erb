[Unit]
Description=Celery Flower monitor
After=network.target

[Service]
User=<%= @user %>
Group=<%= @group %>
WorkingDirectory=<%= @working_dir %>
ExecStart=<%= @celery_bin_path %> flower \
    -A <%= @app %> --port=<%= @port %> --ip=<%= @ip %>

[Install]
WantedBy=multi-user.target
