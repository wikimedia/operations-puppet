{
	"title": "Etherpad",
	"favicon": "favicon.ico",
	"ip": "<%= @etherpad_ip %>",
	"port": <%= @etherpad_port %>,

	"dbType": "mysql",
	"dbSettings": {
		"user": "<%= @etherpad_db_user %>",
		"host": "<%= @etherpad_db_host %>",
		"password": "<%= @etherpad_db_pass %>",
		"database": "<%= @etherpad_db_name %>",
		"charset": "utf8mb4"
	},

	"defaultPadText": "Welcome to WMF etherpad installation. Please keep in mind all current as well as past content in any pad is public. Removing content from a pad does not mean it is deleted. Keep in mind as well that there is no guarantee that a pad's contents will always be available. A pad may be corrupted, deleted or similar. Please keep a copy of important data somewhere else as well",
	"padOptions": {
	    "noColors": false,
	    "showControls": true,
	    "showChat": true,
	    "showLineNumbers": true,
	    "useMonospaceFont": false,
	    "userName": false,
	    "userColor": false,
	    "rtl": false,
	    "alwaysShowChat": false,
	    "chatAndUsers": false,
	    "lang": "en-gb"
	},
	"suppressErrorsInPadText" : false,
	"requireSession" : false,
	"editOnly" : false,
	"sessionNoPassword" : false,
	"minify": true,
	"maxAge" : 21600, // 60 * 60 * 6 = 6 hours
	"abiword": null,
	"tidyHtml" : null,
	"allowUnknownFileEnds" : false,
	"requireAuthentication": false,
	"requireAuthorization": false,
	"log_x_client_ip" : true, // This is a WMF etherpad lite customization. Patch is in gerrit
	"disableIPlogging" : false,
	"socketTransportProtocols" : ["xhr-polling", "jsonp-polling", "htmlfile"],
	"loadTest": false,
	"toolbar": {
	  "left": [
	    ["bold", "italic", "underline", "strikethrough"],
	    ["orderedlist", "unorderedlist", "indent", "outdent"],
	    ["undo", "redo"],
	    ["clearauthorship"]
	  ],
	  "right": [
	    ["importexport", "timeslider", "savedrevision"],
	    ["settings", "embed"],
	    ["showusers"]
	  ],
	  "timeslider": [
	    ["timeslider_export", "timeslider_returnToPad"]
	  ]
	},
	"loglevel": "INFO",
	"logconfig" : {
		"appenders": [
		        { "type": "file",
		          "filename": "/var/log/etherpad-lite/etherpad-lite.log"
			}
		  ]
		}
}
