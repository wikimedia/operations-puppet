# Sample configuration.
# See https://prometheus.io/docs/alerting/configuration/ for documentation.

global:
  smtp_smarthost: 'localhost:25'
  smtp_from: 'sre-observability@<%= @facts["networking"]["domain"] %>'
  smtp_require_tls: false

  # Give alerts with no 'endsAt' field (e.g. librenms) a little more slack
  # See also https://phabricator.wikimedia.org/T285205
  resolve_timeout: '20m'

<% if @victorops_api_key %>
  victorops_api_key: '<%= @victorops_api_key %>'
<% end %>

# The directory from which notification templates are read.
templates:
  - '/etc/prometheus/alertmanager_templates/*.tmpl'

route:
  receiver: default
  group_by: ['alertname', 'cluster', 'scope']
  routes:
    # Log all notifications
    - receiver: 'logger'
      continue: true

    # Compat Icinga alerts are routed to a 'sink' channel
    - match_re:
        alertname: '^Icinga/.*'
      receiver: 'irc-spam'
    - match:
        source: 'icinga'
      receiver: 'irc-spam'

    # Fundraising pingthing alerts are routed to irc #wm-operations and fr-tech@wm.o
    - match:
        instance: 'https://donate.wikimedia.org/'
        job: 'blackbox/pingthing'
      receiver: 'fr-ircmail'

    # Generic pingthing alerts are routed to irc #wm-operations and noc@wm.o
    - match:
        job: 'blackbox/pingthing'
      receiver: 'noc-ircmail'

    # Team routes
    - match:
        team: 'sre'
      routes:
        - match:
            severity: 'page'
          receiver: 'sre-page'
        - match:
            severity: 'critical'
          receiver: 'sre-irc'
    - match:
        team: 'data-engineering'
      routes:
        - match:
            severity: 'page'
          receiver: 'data-engineering-page'
        - match:
            severity: 'critical'
          receiver: 'data-engineering-ircmail'
        - match:
            severity: 'warning'
          receiver: 'data-engineering-irc'
        - match:
            severity: 'task'
          receiver: 'data-engineering-task'
    - match:
        team: 'data-persistence'
      routes:
        - match:
            severity: 'page'
          receiver: 'sre-page'
        - match:
            severity: 'critical'
          receiver: 'data-persistence-ircmail'
        - match:
            severity: 'warning'
          receiver: 'data-persistence-irc'
    - match:
        team: 'serviceops-collab'
      routes:
        - match:
            severity: 'critical'
          receiver: 'serviceops-collab-critical'
        - match:
            severity: 'warning'
          receiver: 'serviceops-collab-warning'
    - match:
        team: 'dcops'
      receiver: 'dcops-mail'
      routes:
        - match:
            severity: 'task'
          # Default to #dcops project if none of the site routes match
          receiver: 'dcops-task'
          routes:
<% ["eqiad", "eqord", "codfw", "eqdfw", "esams", "knams", "ulsfo", "drmrs", "eqsin"].each do |site| -%>
            - match_re:
                instance: '^.*<%= site %>.*$'
              receiver: 'dcops-<%= site %>-task'
<% end -%>
    - match:
        team: 'noc'
      receiver: 'noc-ircmail'
      routes:
        - match:
            severity: 'page'
          receiver: 'sre-page'
    - match:
        team: 'netops'
      receiver: 'netops-mail'
    - match:
        team: 'peering'
      receiver: 'peering-mail'
    - match:
        team: 'perf'
      receiver: 'perf-ircmail'
      repeat_interval: '48h'
    - match:
        team: 'traffic'
      receiver: 'traffic-ircmail'
    - match:
        team: 'releng'
      receiver: 'releng-ircmail'
    - match:
        team: 'rweb'
      receiver: 'rweb-mail'
    - match:
        team: 'wikidata'
      receiver: 'wikidata-mail'
    - match:
        team: 'search-platform'
      routes:
        - match:
            severity: task
          receiver: 'search-platform-task'
        - receiver: 'search-platform-ircmail'
    - match:
        team: 'wmcs'
      # Grouping by instance too so we create one task per alert+instance tuple
      # as sometimes it's better for handling (ex. when there's a node down alert
      # you might want one task for each node, so they can be checked individually)
      group_by: ['alertname', 'cluster', 'scope', 'instance']
      routes:
        - match:
            severity: 'page'
          receiver: 'wmcs-pagetaskircmail'
        - match:
            severity: 'task'
          receiver: 'wmcs-taskircmail'
        - match:
            severity: 'critical'
          receiver: 'wmcs-taskircmail'
        - match:
            severity: 'warning'
          receiver: 'wmcs-ircmail'
    - match:
        team: 'abstract-wikipedia'
      routes:
        - match:
            severity: 'critical'
          receiver: 'abstract-wikipedia-critical'
        - match:
            severity: 'warning'
          receiver: 'abstract-wikipedia-warning'

    # Default routing for page/critical alerts, if no team could be routed
    - match:
        severity: 'page'
      receiver: 'sre-irc'
    - match:
        severity: 'critical'
      receiver: 'sre-irc'



    # Force 'default' receiver as last and catch-all child route
    - receiver: 'default'

