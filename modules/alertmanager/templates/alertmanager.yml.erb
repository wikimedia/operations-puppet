      receiver: 'mediawiki-platform-ircmail'

    - match:
        team: 'ml'
      receiver: 'ml-ircmail'

    # Default routing for page/critical alerts, if no team could be routed
    - match:
        severity: 'page'
      receiver: 'sre-page'
    - match:
