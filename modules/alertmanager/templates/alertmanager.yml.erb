      receiver: 'traffic-ircmail'
      routes:
        - match:
            severity: 'page'
          receiver: 'sre-page'
    - match_re:
        # team=observability is used for role_owner
        team: '(observability|o11y)'
        severity: 'critical'
      receiver: 'o11y-irc'
    - match:
        team: 'releng'
