          receiver: 'search-platform-task'
        - match:
            severity: page
          receiver: 'sre-page'
          continue: true
        - receiver: 'search-platform-ircmail'
    - match:
        team: 'wmcs'
      routes:
        - match:
            severity: 'page'
          receiver: 'wmcs-pagetaskircmail'
        - match:
            severity: 'task'
