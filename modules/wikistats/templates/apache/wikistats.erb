# vim: filetype=apache

<VirtualHost *:80>

    ServerName <%= scope.lookupvar('wikistats::wikistats_host') %>

    # RewriteEngine on
    # RewriteRule ^/(.*)$ https://<%= scope.lookupvar('wikistats::wikistats_host') %>/$1 [R=301]

    DocumentRoot /var/www/wikistats

    <Directory />
        Options FollowSymLinks
        AllowOverride None
    </Directory>

    <Directory /var/www/wikistats/>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>

    ErrorLog /var/log/apache2/error.log
    LogLevel warn
    CustomLog /var/log/apache2/access.log wmf
    ServerSignature On

</VirtualHost>

