# Settings file for Graphite webapp.
# This file is managed by Puppet.


## General

TIME_ZONE = 'Etc/UTC'
SECRET_KEY = '<%= scope.lookupvar('::passwords::graphite::graphite_web_secret_key') %>'


## Logging

LOG_RENDERING_PERFORMANCE = True
LOG_CACHE_PERFORMANCE = True
LOG_METRIC_ACCESS = True
MEMCACHE_HOSTS = ['127.0.0.1:11211']


## File paths

CONF_DIR = '/etc/graphite'
CONTENT_DIR = '/usr/share/graphite-web/static'
GRAPHITE_ROOT = '/usr/share/graphite-web'
INDEX_FILE = '/var/lib/graphite-web/search_index'
LOG_DIR = '/var/log/graphite-web'
STORAGE_DIR = '/var/lib/graphite/whisper'
WHISPER_DIR = STORAGE_DIR


## Database

DATABASES = {
    'default': {
        'NAME': '/var/lib/graphite-web/graphite.db',
        'ENGINE': 'django.db.backends.sqlite3',
    }
}


## Carbon

<%- carbon_settings = scope.lookupvar('::graphite::carbon_settings'); if carbon_settings.key? 'relay' -%>
CARBONLINK_HOSTS = [<%= carbon_settings['relay']['destinations'].map { |d| "\"#{d}\"" }.join(', ') %>]
<%- end -%>
