# Configuration file for jupyterhub

c.Application.log_level = 'WARN'
c.JupyterHub.admin_access = True

c.JupyterHub.proxy_cmd = '<%= @base_dir %>/venv/bin/nchp'

c.JupyterHub.authenticator_class = 'ldapauthenticator.LDAPAuthenticator'
c.LDAPAuthenticator.server_address = 'ldap-labs.eqiad.wikimedia.org'
c.LDAPAuthenticator.bind_dn_template = \
    'uid={username},ou=people,dc=wikimedia,dc=org'
c.LDAPAuthenticator.allowed_groups = [
    'cn=nda,ou=groups,dc=wikimedia,dc=org',
    'cn=wmf,ou=groups,dc=wikimedia,dc=org'
]

c.JupyterHub.config_file = '<%= @base_dir %>/jupyterhub_config.py'
c.JupyterHub.confirm_no_ssl = True
c.JupyterHub.cookie_secret = bytes.fromhex('ABCDEF1234567890')

c.JupyterHub.data_files_path = '<%= @base_dir %>/venv/share/jupyter/hub'

c.JupyterHub.db_url = 'sqlite:////<%= @base_dir %>/jupyterhub.sqlite'

c.JupyterHub.hub_ip = '127.0.0.1'
c.JupyterHub.hub_port = 8081
c.JupyterHub.hub_prefix = '/hub/'
c.JupyterHub.ip = '0.0.0.0'
c.JupyterHub.port = 8000

c.JupyterHub.spawner_class = 'systemdspawner.SystemdSpawner'
c.SystemdSpawner.env = {
    'HADOOP_CONF_DIR': '/etc/hadoop/conf.analytics-cluster/',
}

