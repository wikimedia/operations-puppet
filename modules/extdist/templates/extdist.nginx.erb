# nginx configuration for extdist

server {
    listen 80;

    # Enforce HTTPS only
    if ($http_x_forwarded_proto != "https") {
          rewrite ^(.*)$ https://$http_host$1 permanent;
    }

    location / {
        return 302 https://www.mediawiki.org/wiki/Special:ExtensionDistributor;
    }

    location /dist {
        alias <%= @dist_dir %>;
        autoindex on;
    }
}
