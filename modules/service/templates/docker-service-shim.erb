<%-
if @volume then
  etc = "#{@title}"
else
  etc = "/etc/#{@title}/"
end

%>
[Unit]
Description=Systemd runner for <%= @title %>
After=docker.service
Requires=docker.service

[Service]
ExecStartPre=-/usr/bin/docker stop %n
ExecStartPre=-/usr/bin/docker rm %n
<% if @version == "latest" -%>
ExecStartPre=/usr/bin/docker pull <%= @image_full_name %>:<%= @version %>
<% end -%>
ExecStart=/usr/bin/docker run --rm=true <%= "--runtime #{@runtime}" if @runtime %> --env-file /etc/<%= @title %>/env <% if @host_network == true %>--network host<% else %>-p <%= @port %>:<%= @port %><% end %> -v <%= etc %>:/etc/<%= @title %> --name %n <%= @image_full_name %>:<%= @version %> <%= @override_cmd %>
Restart=always
RestartSec=10s
NotifyAccess=all
# Let docker do its things on its own terms
TimeoutStartSec=120
TimeoutStopSec=15
SyslogIdentifier=docker-<%= @title %>

[Install]
WantedBy=multi-user.target
