#!/usr/bin/env python

import sys
from elastictool import ElasticTool


class ServerHealth(ElasticTool):
    def execute(self):
        health = self.health()
        print health
        if health != "green":
            sys.exit(1)
        else:
            sys.exit(0)

if __name__ == "__main__":
    tool = ServerHealth("Check the health of your server")
    tool.run()
