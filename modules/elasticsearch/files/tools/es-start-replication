#!/usr/bin/env python

import sys
from elastictool import ElasticTool


class StartReplication(ElasticTool):
    def execute(self):
        if self.set_replication_state("all"):
            print "All replication enabled"
            sys.exit(0)
        else:
            print "Failed to set replication state"
            sys.exit(1)

if __name__ == "__main__":
    tool = StartReplication("Enable replication of all shards")
    tool.run()
