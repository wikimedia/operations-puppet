modules {
    module {
        name = "ocg"
        language = "python"
        param url {
            value = "http://localhost:8000/?command=health"
        }
        param tmp_filesystem {
            value = "<%= @tmp_filesystem %>"
        }
        param data_filesystem {
            value = "<%= @data_filesystem %>"
        }
    }
}

collection_group {
    collect_every = 300
    time_threshold = 300
    metric {
        name = "ocg_job_status_queue"
    }
    metric {
        name = "ocg_job_queue"
    }
    metric {
        name = "ocg_tmp_filesystem_utilization"
    }
    metric {
        name = "ocg_data_filesystem_utilization"
    }
    metric {
        name = "ocg_health_check_response_time"
    }
}
