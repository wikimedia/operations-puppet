# vim: filetype=apache

# Due to Jetty's connection limiting flooding logs with "Dispatched
# Failed" Error messages, we limit connections already here.
MaxClients 50

<VirtualHost *:80>
    ServerAdmin noc@wikimedia.org
    ServerName <%= @host %>

    <%- if @gerrit_ssl -%>
    Include gerrit-redirect-to-ssl
    <%- else -%>
    Include gerrit-conf
    <%- end -%>

</VirtualHost>

<%- if @gerrit_ssl -%>
NameVirtualHost *:443
<VirtualHost *:443>
    ServerAdmin noc@wikimedia.org
    ServerName <%= @host %>
    # https://httpoxy.org/
    RequestHeader unset Proxy early

    SSLEngine on
    SSLCertificateFile /etc/acme/cert/gerrit.crt
    SSLCertificateChainFile /etc/acme/cert/gerrit.chain.crt
    SSLCertificateKeyFile /etc/acme/key/gerrit.key
    <%= @ssl_settings.join("\n") %>

    <%- if @gerrit_ssl -%>
    Include gerrit-conf
    <%- end -%>

</VirtualHost>
<%- end -%>