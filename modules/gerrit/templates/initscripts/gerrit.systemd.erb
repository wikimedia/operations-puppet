[Unit]
Description=Gerrit code review tool
After=network.target

[Service]
User=gerrit2
Group=gerrit2
Type=simple
EnvironmentFile=/etc/default/gerrit
ExecStart=<%= @java_home %>/bin/java <% @java_options.each do |jvm_opt| %><%= jvm_opt %> <% end %> -jar <%= @gerrit_war %> daemon -d /var/lib/gerrit2/review_site<%- if @slave -%> --slave<% end %>
KillSignal=SIGINT
# NOFILE :  GERRIT_FDS, determined by "core.packedGitOpenFiles" in the script
LimitNOFILE=<%= @git_open_files %>

[Install]
WantedBy=multi-user.target
