server {
   listen 80;
   listen [::]:80;
   server_name ubuntu.wikimedia.org;

   root /srv/mirrors;

   include /etc/acme/challenge-nginx.conf;

   location / {
      index index.html;
      autoindex on;
      charset utf-8;
   }
}

server {
   listen 443 ssl;
   listen [::]:443 ssl;
   server_name ubuntu.wikimedia.org;

   ssl_certificate /etc/acme/cert/ubuntu.chained.crt;
   ssl_certificate_key /etc/acme/key/ubuntu.key;
   <%= @ssl_settings.join("\n")  %>

   root /srv/mirrors;

   location / {
      index index.html;
      autoindex on;
      charset utf-8;
   }
}
