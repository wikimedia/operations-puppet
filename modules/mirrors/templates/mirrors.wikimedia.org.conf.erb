server {
   listen 80;
   listen [::]:80;
   server_name mirrors.wikimedia.org;

   root /srv/mirrors;

   location / {
      index index.html;
      autoindex on;
      charset utf-8;
   }
}

server {
   listen 443 ssl;
   listen [::]:443 ssl;
   server_name mirrors.wikimedia.org;

   ssl_certificate /etc/letsencrypt/live/mirrors.wikimedia.org/fullchain.pem;
   ssl_certificate_key /etc/letsencrypt/live/mirrors.wikimedia.org/privkey.pem;
   <%= @ssl_settings.join("\n")  %>

   root /srv/mirrors;

   location / {
      index index.html;
      autoindex on;
      charset utf-8;
   }
}
