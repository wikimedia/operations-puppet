server {
   listen 80;
   listen [::]:80;
   server_name mirrors.wikimedia.org;

   root /srv/mirrors;


   location / {
      index index.html;
      autoindex on;
      charset utf-8;

      # per Tails' request
      location /tails {
         etag off;
      }
   }

}

server {
   listen 443 ssl;
   listen [::]:443 ssl;
   server_name mirrors.wikimedia.org;

   ssl_certificate /etc/acmecerts/mirrors/live/rsa-2048.chained.crt;
   ssl_certificate_key /etc/acmecerts/mirrors/live/rsa-2048.key;
   <%= @ssl_settings.join("\n   ") %>

   root /srv/mirrors;

   location / {
      index index.html;
      autoindex on;
      charset utf-8;

      # per Tails' request
      location /tails {
         etag off;
      }
   }
}
