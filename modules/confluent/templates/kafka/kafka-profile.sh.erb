# NOTE:  This file is managed by Puppet

# These environment variables are used by /usr/local/bin/kafka
# to automatically set common kafka CLI options.
export KAFKA_ZOOKEEPER_URL=<%= @zookeeper_connect %>
export KAFKA_BOOTSTRAP_SERVERS=<%= @brokers.keys.sort.map { |host| "#{host}:#{@default_port}" }.join(',') %>
<% if @java_home -%>
export KAFKA_JAVA_HOME=<%= @java_home %>
<% end -%>
