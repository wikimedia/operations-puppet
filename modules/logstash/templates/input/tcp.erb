input {
  tcp {
    type => "<%= @type %>"
    port => <%= @port %>
    codec => "<%= @codec %>"
    <% if @ssl_enable == true -%>
    ssl_enable => true
    ssl_cert => "<%= @ssl_cert %>"
    ssl_key  => "<%= @ssl_key %>"
    <% end -%>
    <%- unless @plugin_id.empty? -%>
    id => "<%= @plugin_id %>"
    <%- end -%>
    <%- if @tags -%>
    tags => ["<%= @tags.join('", "') %>"]
    <%- end -%>
  }
}
