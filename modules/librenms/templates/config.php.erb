<%-
def phpdump(o, level = 1)
  indent = " " * 4

  case o
  when Hash
    contents = ''
    o.sort.each do |k, v|
      contents += indent * level
      contents += k.to_json + " => " + phpdump(v, level + 1)
      contents += ",\n"
    end
    "array(\n" + contents + indent * (level - 1) + ")"
  when Array
    "array(" + o.map { |x| phpdump(x, level + 1) }.join(', ') + ")"
  when TrueClass
    "TRUE"
  when FalseClass
    "FALSE"
  when nil
    "NULL"
  else
    begin
      o.include?('.') ? Float(o).to_s : Integer(o).to_s
    rescue
      o.to_json
    end
  end
end
