Device {
    Name = <%= @name %>
    Device Type = <%= @device_type %>
    Media Type = <%= @media_type %>
    Archive Device = <%= @archive_device %>
    Maximum Concurrent Jobs = <%= @max_concur_jobs %>
<% if @spool_dir -%>
    Spool Directory = <%= @spool_dir %>
    Maximum Spool Size = <%= @max_spool_size %>
<% end -%>
<% if @device_type == 'File' then -%>
    LabelMedia = yes;
    Random Access = Yes;
    AutomaticMount = yes;
    RemovableMedia = no;
    AlwaysOpen = no;
<% elsif @device_type == 'Tape' then -%>
    AutomaticMount = yes;
    AlwaysOpen = yes;
    LabelMedia = no;
    RemovableMedia = yes;
    RandomAccess = no;
    # AutoChanger = yes;
    Alert Command = "sh -c 'smartctl -H -l error -d scsi %c'"
<% elsif @device_type == 'Fifo' then -%>
    AutomaticMount = no;
    AlwaysOpen = yes;
    LabelMedia = no;
    RemovableMedia = no;
    RandomAccess = no;
<% end -%>
}
