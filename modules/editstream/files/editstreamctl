#!/bin/bash
# editstreamctl -- Manage EditStream jobs
# Usage: editstreamctl {status|start|stop|restart}
#
command=$1
shift
case "$command" in
    status)
        initctl list | grep -Po '(?<=editstream/)(?!init).*' | sort -k5 \
                | sed 's/, process//' | column -ts'( )'
        ;;
    start)
        initctl emit editstream.start
        ;;
    stop)
        initctl emit editstream.stop
        ;;
    restart)
        initctl emit editstream.stop
        initctl emit editstream.start
        ;;
    *)
        echo >&2 "Usage: ${0##*/} {status|start|stop|restart}"
        ;;
esac
