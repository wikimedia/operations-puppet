<VirtualHost *:80>
    ServerName pybal-config
    ServerAlias <%= @vhostnames.join(' ') %>
    
    DocumentRoot /srv/pybal-config

    <Directory "/srv/pybal-config">
	 <IfVersion >= 2.4>
         Require all granted
	</IfVersion>
	<IfVersion < 2.4>
         Order allow,deny
         Allow from all
	</IfVersion>
         Options +Indexes +Followsymlinks
         AllowOverride None
     </Directory>

     CustomLog "|/usr/bin/cronolog --once-only --period=1minute /var/log/apache2/pybal-access.log" combined
     ErrorLog "|/usr/bin/cronolog --once-only --period=1minute /var/log/apache2/pybal-error.log"
</VirtualHost>
