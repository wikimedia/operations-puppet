# do not use a proxy, since the service issues internal
# requests only
proxy:
# the RESTBase URI to use
# NOTE: effective in older versions only!
restbase_uri: <%= @restbase_uri %>/%DOMAIN%/v1
# the request template to use when contacting RESTBase
restbase_req:
  uri: <%= @restbase_uri %>/{domain}/v1/page/html/{title}
  headers:
    user-agent: <%= @user_agent %>
    accept: text/html; charset=utf-8; profile="mediawiki.org/specs/html/1.2.0"
# the request template to use when contacting the MW API
mwapi_req:
  method: post
  uri: <%= @mwapi_uri %>
  headers:
    host: '{request.params.domain}'
    user-agent: <%= @user_agent %>
