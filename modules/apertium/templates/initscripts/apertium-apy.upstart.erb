description "Apertium APY service"

start on (local-filesystems and net-device-up IFACE!=lo)
stop on runlevel [!2345]

setuid "apertium"
setgid "apertium"

# Apertium seems to leak fds, or the current default limit is not enough
limit nofile 8096 8096

env LC_ALL=en_US.utf-8

respawn
exec /usr/bin/python3 /usr/share/apertium-apy/servlet.py -j<%= @num_of_processes %> -m<%= @max_idle_seconds %> /usr/share/apertium/modes

# wait 60 seconds for a graceful restart before killing the master
kill timeout 60
