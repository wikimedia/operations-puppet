# Please use separate .cnf templates for each type of server.

[client]
port   = 3306
socket = <%= @socket %>
<% if @ssl == 'on' or @ssl == 'puppet-cert' %>
# ssl
ssl-ca=/etc/ssl/certs/Puppet_Internal_CA.pem
ssl-cert=/etc/mysql/ssl/cert.pem
ssl-key=/etc/mysql/ssl/server.key
ssl-verify-server-cert
<% end %>

[mysqld]

skip-external-locking
skip-name-resolve
temp-pool

user      = mysql
socket    = <%= @socket %>
port      = 3306
datadir   = <%= @datadir %>
tmpdir    = <%= @tmpdir %>
server_id = <%= @server_id %>
read_only = <%= @read_only %>

# enable socket authentication
plugin-load = unix_socket=auth_socket.so

secure_file_priv   = /dev/null
max_connections    = 250
max_allowed_packet = 32M
connect_timeout    = 3
max_connect_errors = 1000000000
query_cache_size   = 0
query_cache_type   = 0
event_scheduler    = 1
plugin-load        = ha_tokudb
open-files-limit   = 100000

table_open_cache       = 5000
table_definition_cache = 5000
default-storage-engine = Aria

transaction-isolation          = READ-COMMITTED
innodb_file_per_table          = 1
innodb_buffer_pool_size        = 4G
innodb_log_file_size           = 1G
innodb_flush_log_at_trx_commit = 0
innodb_flush_method            = O_DIRECT
aria_pagecache_buffer_size     = 1G
tokudb_cache_size              = 24G

# dump and load innodb buffer at start and stop
innodb_buffer_pool_load_at_startup  = 1
innodb_buffer_pool_dump_at_shutdown = 1

<% if @ssl == 'on' or @ssl == 'puppet-cert' %>
# ssl
ssl-ca=/etc/ssl/certs/Puppet_Internal_CA.pem
ssl-cert=/etc/mysql/ssl/cert.pem
ssl-key=/etc/mysql/ssl/server.key
ssl-cipher=TLSv1.2
<% end %>

optimizer_switch='engine_condition_pushdown=on,optimize_join_buffer_size=on'
join_cache_level = 8

[mysqldump]

quick
max_allowed_packet = 32M

