[client]
port   = <%= @port %>
socket = <%= @socket %>
<% if @ssl == 'on' or @ssl == 'puppet-cert' %>
# ssl
ssl-ca=<%= @ssl_ca %>
ssl-cert=<%= @ssl_cert %>
ssl-key=<%= @ssl_key %>
  <% if @ssl_verify_server_cert %>
ssl-verify-server-cert
  <% end %>
<% end %>

[mysql]
prompt = <%= @prompt %>
no-auto-rehash

[mysqldump]
quick
max_allowed_packet = <%= @max_allowed_packet %>

