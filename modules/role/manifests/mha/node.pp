class mha::node {
    package { 'mha4mysql-node':
        ensure => latest,
    }

    file { [ '/home/mysql', '/home/mysql/.ssh' ]:
        ensure  => directory,
        owner   => 'mysql',
        group   => 'mysql',
        mode    => '0700',
        require => User['mysql'],
    }

    file { '/home/mysql/.ssh/mysql.key':
        owner   => 'mysql',
        group   => 'mysql',
        mode    => '0400',
        content => secret('ssh/mysql/mysql.key'),
    }

    ssh::userkey { 'mysql':
        ensure  => present,
        content => 'ssh-rsa  mha@production',
    }
}

