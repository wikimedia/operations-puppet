## Managed by puppet

qualify_domain = <%= @maildomain %>

begin routers

# Catch unqualified e-mail addresses from MediaWiki

smart_route:
	driver = manualroute
	transport = remote_smtp
	route_list = *	<%= @fqdn %>

begin transports

# Generic remote SMTP transport

remote_smtp:
	driver = smtp

begin retry

*	*	F,2h,5m; F,1d,15m

