/usr/bin/ldapsearch -b "cn=$1,ou=servicegroups,dc=wikimedia,dc=org" -LLL -o ldif-wrap=no -x member | sed -ne 's/^member: uid=\(.*\),ou=people,\(ou=servicegroups,\)\?dc=wikimedia,dc=org$/\1/p;'
