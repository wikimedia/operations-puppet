# NOTE: This file is managed by Puppet.

/var/log/kafkatee.log {
  daily
  rotate 7
  create 0644 root adm
  missingok
  compress
  delaycompress
  postrotate
    invoke-rc.d rsyslog rotate >/dev/null
  endscript
}

/var/cache/kafkatee/kafkatee.stats.json {
  weekly
  rotate 4
  create 0644 kafkatee root
  missingok
  compress
  delaycompress
  postrotate
    service kafkatee reload
  endscript
}
