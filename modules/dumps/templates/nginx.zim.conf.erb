limit_conn_zone $binary_remote_addr zone=addr:10m;

server {
   listen 80;
   server_name francium.eqiad.wmnet;

   root /srv/www;

   location / {
      index index.html index.htm;
      autoindex on;
      charset utf-8;
      limit_rate 2048k;
      limit_rate_after 1m;
      limit_conn addr 3;
   }

}
