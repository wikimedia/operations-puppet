[dumpmirrorslastfivedumps]
# not really, we should transition people to using the module below
read only = true
path = <%= @xmldumpsdir %>
exclude = **tmp/ **temp/ **bad/ **save/ **other/ **archive/ **not/ *.inprog
hosts allow = <%= @hosts_allow %>

