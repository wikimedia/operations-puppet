#####################################################################
### puppet:///modules/dumps/rsync/rsyncd.conf.datasets_to_peers
#####################################################################

# for rolling rsyncs between dataset hosts
[data]
# using push model for rsync, so...
uid = root
gid = root
read only = false
path = <%= @datapath %>
exclude = **bad/ **save/ **not/ **temp/ **tmp/ *.inprog
hosts allow = <%= @hosts_allow %>
