! This file is managed by Puppet

daemonize: true
pidfile: /var/run/nfacctd.pid
syslog: daemon

aggregate: src_host, dst_host, src_as, dst_as, src_port, dst_port, proto, tcpflags, as_path, peer_src_as, peer_dst_as

! Disable some warnings due to JunOS bugs
nfacctd_disable_checks: true

nfacctd_ext_sampling_rate: 1000
nfacctd_renormalize: true
pre_tag_map: /etc/pmacct/pretag.map

bgp_daemon: true
bgp_daemon_max_peers: 20
bgp_peer_as_skip_subas: true
bgp_aspath_radius: 2
nfacctd_as_new: bgp

<% if @kafka_brokers -%>
plugins: kafka
kafka_output: json
kafka_topic: netflow
kafka_broker_host: <%= @kafka_brokers %>
kafka_partition: -1
kafka_refresh_time: 60
kafka_history: 1m
kafka_history_roundoff: m
<% if @librdkafka_config -%>
kafka_config_file: <%= @kafka_config_file %>
<% end -%>
<% end -%>
