[Unit]
Description=Sentry error logging and aggregation service (web interface)
Documentation=http://sentry.readthedocs.org/en/latest/
After=network.target
Requires=sentry-worker

[Service]
Type=simple
Environment="SENTRY_CONF=/etc/sentry.conf.py"
ExecStart=/srv/sentry/bin/sentry start
User=sentry
Group=sentry
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

