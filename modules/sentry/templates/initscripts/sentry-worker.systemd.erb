[Unit]
Description=Sentry error logging and aggregation service (queue worker)
Documentation=http://sentry.readthedocs.org/en/latest/
After=network.target

[Service]
Type=simple
Environment="SENTRY_CONF=/etc/sentry.conf.py"
ExecStart=<%= @sentry_dir %>/bin/sentry celery worker -B
User=sentry
Group=sentry
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

