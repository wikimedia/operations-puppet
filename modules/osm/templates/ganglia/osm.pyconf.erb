modules {
  module {
    name = 'OSM'
    language = 'python'

    param state_path {
      value = '<%= @state_path %>'
    }
    # This parameter determines the interval, in seconds, between the execution
    # of queries which gather the statistics of the database
    param refresh_rate {
      value = <%= @refresh_rate %>
    }
  }
}

collection_group {
  collect_every = 15
  time_threshold = 90

  metric {
    name_match = "osm_(.+)"
    value_threshold = 0
  }
}
