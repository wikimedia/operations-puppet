{
    "irc": {
        "channels": <%= @channels %>,
        "network": ["<%= @server_host %>", <%= @server_port %>, "<%= @nickname %>:<%= @password %>"],
        <% if @ssl %>"ssl": true,<% end %>
        "nickname": "<%= @nickname %>"
    },
    "tcp": {
        "max_clients": <%= @max_clients %>,
        <% if @cidr %>"cidr": <%= @cidr.is_a?(Array) ? @cidr : [@cidr] %>,<% end %>
        "port": <%= @listen_port %>
    }
}
