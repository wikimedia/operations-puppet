/var/log/nginx/*.log {
	daily
	missingok
	rotate 1
	compress
	delaycompress
	notifempty
	create 0640 www-data adm
	sharedscripts
	prerotate
		if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
			run-parts /etc/logrotate.d/httpd-prerotate; \
		fi; \
	endscript
	postrotate
		[ ! -f /var/run/nginx.pid ] || kill -HUP `cat /var/run/nginx.pid`
	endscript
}
