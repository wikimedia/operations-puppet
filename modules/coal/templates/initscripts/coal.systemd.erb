[Unit]
Description=Navigation Timing Whisper logger

[Service]
User=coal
Group=coal
Restart=always
ExecStart=/usr/local/bin/coal --brokers "<%= @kafka_brokers %>" --consumer-group "<%= @kafka_consumer_group %>" \
  <% @el_schemas.each do | schema | -%>
	--schema "<%= schema %>" \
  <% end -%>
	--whisper-dir "<%= @whisper_dir %>"

[Install]
WantedBy=multi-user.target
