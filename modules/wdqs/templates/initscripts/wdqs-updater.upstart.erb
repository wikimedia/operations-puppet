description "WDQS Updater service"

stop on [!12345]
manual

setuid <%= @username %>
console log
chdir <%= @package_dir %>

pre-start script
  [ -e <%= @package_dir %>/wikidata.jnl -a -e <%= @data_dir %>/data_loaded ] || stop && exit 0
end script

exec /bin/bash <%= @package_dir %>/runUpdate.sh <%= @options %>

respawn
respawn limit 10 60