[Unit]
Description=Wikidate Query Service Updater
Wants=wdqs-blazegraph.service
After=wdqs-blazegraph.service
ConditionPathExists=<%= @data_dir %>/wikidata.jnl
ConditionPathExists=<%= @data_dir %>/data_loaded
StartLimitIntervalSec=300
StartLimitBurst=5

[Service]
Type=simple
WorkingDirectory=<%= @package_dir %>
ExecStart=/bin/bash <%= @package_dir %>/runUpdate.sh <%= @options.join(' ') %>
User=<%= @username %>
StandardOutput=journal+console
Restart=always
RestartSec=10
SyslogIdentifier=%N

[Install]
