varnishtest "Maps backend basic caching"

server s1 {
    rxreq
    txresp
} -start

varnish v1 -arg "-p vcc_err_unref=false" -vcl+backend {
    // NOTE: the definition of be_kartotherian needs to be commented out
    // in /etc/varnish/wikimedia_maps-backend.vcl in order for this to
    // work
    backend be_kartotherian {
        .host = "${s1_addr}"; .port = "${s1_port}";
    }

    include "/etc/varnish/wikimedia_maps-backend.vcl";
} -start

client c1 {
    txreq -url "/?foo=bar"
    rxresp
    expect resp.status == 200
    expect resp.http.via ~ "varnish"
    expect resp.http.x-cache ~ "miss"

    delay 1

    txreq -url "/?foo=bar"
    rxresp
    expect resp.http.x-cache ~ "hit"
    expect resp.http.age == 1
} -run
