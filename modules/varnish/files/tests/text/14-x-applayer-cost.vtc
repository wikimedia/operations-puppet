varnishtest "X-Applayer-Cost header"

server s1 {
    rxreq
    delay 1
    txresp
} -start

varnish v1 -arg "-p vcc_err_unref=false -p vcc_allow_inline_c=true" -vcl+backend {
    backend vtc_backend {
        .host = "${s1_addr}"; .port = "${s1_port}";
    }

    include "/usr/share/varnish/tests/wikimedia_text-backend.vcl";
} -start


client c1 {
    txreq
    rxresp
    expect resp.http.X-Applayer-Cost > 1000
} -run
