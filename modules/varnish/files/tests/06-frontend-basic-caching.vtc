varnishtest "Maps frontend basic caching"

server s1 {
	rxreq
	txresp
} -start

varnish v1 -arg "-p vcc_err_unref=false" -vcl+backend {
	backend ipv4_127_0_0_1 {
		.host = "${s1_addr}"; .port = "${s1_port}";
	}

	include "/usr/share/varnish/tests/wikimedia_maps-frontend.vcl";
} -start

client c1 {
	txreq -url "/?foo=bar"
	rxresp
	expect resp.status == 200
	expect resp.http.via ~ "varnish"
	expect resp.http.x-cache ~ "miss"

	delay 1

	txreq -url "/?foo=bar"
	rxresp
	expect resp.http.x-cache ~ "hit"
	expect resp.http.age == 1
} -run
