[Unit]
Description=Varnish frontend TLS ciphersuite inspector
After=varnish-frontend.service
Requires=varnish-frontend.service

[Service]
ExecStart=/usr/local/bin/varnishtlsinspector --varnishd-instance-name frontend --logstash-server=<%= scope['::varnish::common::logstash_host'] %>:<%= scope['::varnish::common::logstash_json_lines_port'] %>
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
