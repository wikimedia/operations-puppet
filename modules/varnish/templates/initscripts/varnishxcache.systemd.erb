[Unit]
Description=Varnish X-Cache StatsD reporter
After=varnish-frontend.service
Requires=varnish-frontend.service

[Service]
ExecStart=/usr/local/bin/varnishxcache --statsd-server=<%= @statsd_server %> --key-prefix=<%= @metric_prefix %>
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
