[Unit]
Description=Varnish Request Stats StatsD reporter
After=<%= @varnish_service_name %>.service
Requires=<%= @varnish_service_name %>.service

[Service]
ExecStart=/usr/local/bin/varnishreqstats --statsd=<%= @statsd %> --key-prefix=<%= @key_prefix %> --interval=<%= @interval %>
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
