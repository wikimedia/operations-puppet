#!/bin/bash
PUPPET_PATH='<%= @puppet_directory %>'
/usr/bin/puppet apply \
    --modulepath $PUPPET_PATH/modules \
    --manifestdir $PUPPET_PATH/manifests \
    --templatedir $PUPPET_PATH/templates \
    --verbose \
    --logdest console \
    --detailed-exitcodes \
    $PUPPET_PATH/manifests/site.pp
