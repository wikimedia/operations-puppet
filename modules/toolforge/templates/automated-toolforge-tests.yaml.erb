# modules/toolforge/templates/automated-toolfoge-tests.yaml.erb
---
- envvars:
  - PROJECT: <%= @labsproject %>
    TOOLNAME: automated-toolforge-tests
    SUDO: sudo -niu <%= @labsproject %>.automated-toolforge-tests
    JOB_NAME: grid-test-script
    JOB_SCRIPT: ./grid-test-script.sh
    SCRIPT_FULLPATH: /data/project/automated-toolforge-tests/grid-test-script.sh
    WEBGENCODE_FULLPATH: /data/project/automated-toolforge-tests/www/python/src/app.py
    WEBGENCODE_ROOT: ./www
    WEBGENCODE_VENV: ./www/python/venv
    WEBGENCODE_SRC_DIR: ./www/python/src
    WEBLIGHTCODE_FULLPATH: /data/project/automated-toolforge-tests/public_html/app.py
    WEBLIGHTCODE_ROOT: ./public_html
    WEBLIGHTCODE_URL_COMPONENT: app.py
    VERIFY_TIMEOUT: "60"
    CRON_FILE: /data/project/automated-toolforge-tests/cron.txt
    TJF_NORMAL_JOB_NAME: tjf-normaljob
    TJF_SCRIPT_FULLPATH: /data/project/automated-toolforge-tests/tjf-test-script.sh
    TJF_SCRIPT_SHORTPATH: ./tjf-test-script.sh
    TJF_IMAGE: tf-bullseye-std
<% if @labsproject == 'toolsbeta' -%>
    # toolsbeta using special cloudstore VM NFS server
    NFS_PATH: /mnt/nfs/nfs-01-toolsbeta-project/automated-toolforge-tests
    TOOLFORGE_DOMAIN: toolsbeta.wmflabs.org
<% end -%>
<% if @labsproject == 'tools' -%>
    NFS_PATH: /mnt/nfs/labstore-secondary-tools-project/automated-toolforge-tests
    TOOLFORGE_DOMAIN: toolforge.org
<% end -%>
<% @envvars.each do |key, value| -%>
    <%= key %>: <%= value %>
<% end -%>
---
- name: verify the grid knows about this tool account
  tests:
    - cmd: $SUDO pwd | grep -q ${NFS_PATH}
      retcode: 0
      stderr: ""

- name: tjf setup environment
  tests:
    # cleanups
    - cmd: $SUDO rm -fv ${TJF_NORMAL_JOB_NAME}.{err,out}
    - cmd: $SUDO rm -fv ${TJF_SCRIPT_SHORTPATH}
    - cmd: $SUDO toolforge-jobs flush
    - cmd: |
           cat << EOF > ${TJF_SCRIPT_FULLPATH}
           #!/bin/sh
           # autogenerated file by the toolforge test suite
           cat /etc/debian_version
           EOF
      stdout: ""
      retcode: 0
      stderr: ""
    # ensure proper permissions
    - cmd: chown ${PROJECT}.${TOOLNAME}:${PROJECT}.${TOOLNAME} $TJF_SCRIPT_FULLPATH
      retcode: 0
      stderr: ""
    - cmd: chmod ug+x $TJF_SCRIPT_FULLPATH
      retcode: 0
      stderr: ""

- name: tjf containers
  tests:
    - cmd: $SUDO toolforge-jobs containers | grep -q "${TJF_IMAGE} "
      retcode: 0
      stderr: ""
      stdout: ""

- name: tjf normal job
  tests:
    - cmd: timeout $VERIFY_TIMEOUT $SUDO toolforge-jobs run ${TJF_NORMAL_JOB_NAME} --command ${TJF_SCRIPT_SHORTPATH} --image ${TJF_IMAGE} --wait
      retcode: 0
      stderr: ""
    - cmd: $SUDO grep -q ^11. ${TJF_NORMAL_JOB_NAME}.out
      retcode: 0
      stderr: ""
    - cmd: $SUDO cat ${TJF_NORMAL_JOB_NAME}.err | wc -l
      retcode: 0
      stderr: ""
      stdout: "0"

- name: jsub using implicit path, buster bastion --> buster grid
  tests:
    # cleanup
    - cmd: $SUDO rm -fv path.err path.out
    # schedule job
    - cmd: $SUDO jsub -release buster -N path echo WORKS_BUSTER | grep "has been submitted"
      retcode: 0
      stderr: ""
    # verify: wait for the grid to schedule & run the job
    - cmd: timeout $VERIFY_TIMEOUT bash -c -- '
           while ! $SUDO grep ^WORKS_BUSTER$ path.out
           ; do sleep 0.5 ; done'
      retcode: 0
      stderr: ""
    # we should have no error messages
    - cmd: $SUDO cat path.err | wc -l
      retcode: 0
      stderr: ""
      stdout: "0"

- name: jsub using explicit path (/bin), buster bastion --> buster grid
  tests:
    # cleanup
    - cmd: $SUDO rm -fv path.err path.out
    # schedule job
    - cmd: $SUDO jsub -release buster -N path /bin/echo WORKS_BUSTER | grep "has been submitted"
