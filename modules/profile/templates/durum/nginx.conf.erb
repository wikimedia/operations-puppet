# This file is managed by Puppet [see profile/durum/nginx.conf.erb].

ssl_certificate     /etc/acmecerts/durum/live/ec-prime256v1.chained.crt;
ssl_certificate_key /etc/acmecerts/durum/live/ec-prime256v1.key;

ssl_certificate     /etc/acmecerts/durum/live/rsa-2048.chained.crt;
ssl_certificate_key /etc/acmecerts/durum/live/rsa-2048.key;

# Do not log any access/error logs; we should not save any data related to Wikidough.
access_log off;
error_log  /dev/null;

# landing page: check.wikimedia-dns.org
server {

  listen      <%= @ips['landing'][0] %>:443 ssl http2;
  listen      [<%= @ips['landing'][1] %>]:443 ssl http2;
  server_name <%= @domain %>;

  <%= @ssl_settings.join("\n  ") %>

  add_header  Content-Security-Policy     "default-src 'none'; script-src 'self'; style-src 'self'; connect-src https://*.check.wikimedia-dns.org; frame-src 'none'; frame-ancestors 'none';";
  add_header  X-Content-Type-Options      "nosniff";
  add_header  Cache-Control               "no-store";

  location / {
    root      <%= @durum_path %>;
    index     index.html;
  }

}

# yesdoh: *.check.wikimedia-dns.org (DoH)
<% @ips['success_doh'].each_with_index do |doh_ip, index| -%>
<% ipv6 = index == 1 ? true : false %>
server {

<% if ipv6 -%>
  listen      [<%= doh_ip %>]:443 ssl http2;
<% else -%>
  listen      <%= doh_ip %>:443 ssl http2;
<% end -%>
  server_name *.<%= @domain %>;

  <%= @ssl_settings.join("\n  ") %>

  add_header  Access-Control-Allow-Origin https://<%= @domain %>;
  add_header  Cache-Control               "no-store";

  location /check {
    default_type application/json;
    return 200   '{"wikidough": true, "service": "doh", "site": "<%= scope.lookupvar('::site') %>", "host": "<%= @facts['hostname'] %>", "ipv": <%= ipv6 ? '"ipv6"': '"ipv4"' %>}';
  }

}
<% end -%>

# no: *.check.wikimedia-dns.org
server {

  listen      <%= @ips['failure'][0] %>:443 ssl http2;
  listen      [<%= @ips['failure'][1] %>]:443 ssl http2;
  server_name *.<%= @domain %>;

  add_header  Access-Control-Allow-Origin https://<%= @domain %>;
  add_header  Cache-Control               "no-store";

  <%= @ssl_settings.join("\n  ") %>

  location /check {
    default_type application/json;
    return 200   '{"wikidough": false, "service": null, "site": null, "host": "<%= @facts['hostname'] %>", "ipv": null}';
  }

}

# yesdot: *.check.wikimedia-dns.org (DoH)
<% @ips['success_dot'].each_with_index do |dot_ip, index| -%>
<% ipv6 = index == 1 ? true : false %>
server {

<% if ipv6 -%>
  listen      [<%= dot_ip %>]:443 ssl http2;
<% else -%>
