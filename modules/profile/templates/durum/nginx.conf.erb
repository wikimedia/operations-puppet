  <%= @ssl_settings.join("\n  ") %>

  add_header  Access-Control-Allow-Origin https://<%= @domain %>;
  add_header  Cache-Control               "no-store";

  location /check {
    default_type application/json;
    return 200   '{"wikidough": true, "service": "dot", "site": "<%= scope.lookupvar('::site') %>", "host": "<%= @facts['hostname'] %>", "ipv": <%= ipv6 ? '"ipv6"': '"ipv4"' %>}';
  }

}
<% end -%>
