[default]
archive_after_days=40
projectname=<%= @wmcs_project -%>

[deleteldap]
all_projects_on_server=tools, toolsbeta
hostname_substring=cloudcontrol

# Creds with the power to delete entries:
ldap_uri=<%= @ldap_uri %>
ldap_bind_dn=<%= @novaadmin_bind_dn %>
ldap_bind_pass=<%= @novaadmin_bind_pass %>

[archive]
all_projects_on_server=tools, toolsbeta

# We need to define base_dir_* and archive_dir_* for each project listed above
base_dir_tools = /srv/tools/project
archive_dir_tools = /srv/tools/archivedtools/

base_dir_toolsbeta = /srv/toolsbeta/project/
archive_dir_toolsbeta = /srv/toolsbeta/archivedtools/

hostname_substring=tools-nfs

# This database is owned by the 'admin' tool. It maintains
#  the state of tools that are in the process of disabling or
#  deleting.
[database]
db_host=<%= @tools_db_host %>
db_username=s51051
db_password=<%= @tools_db_password %>
db_name=s51051__disable_tool
