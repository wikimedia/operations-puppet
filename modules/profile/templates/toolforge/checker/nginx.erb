<% @checks.each_key do |check_name| %>
upstream toolschecker_<%= check_name %> {
    server unix:/tmp/uwsgi-<%= check_name %>.sock;
}
<% end %>

server {
    listen 80;
    <% @checks.each_pair do |check_name, path| %>
    location <%= path %> {
        include uwsgi_params;
        uwsgi_pass toolschecker_<%= check_name %>;
    }
    <% end %>
}
