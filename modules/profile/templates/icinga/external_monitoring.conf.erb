# vim: filetype=apache
<VirtualHost *:443>
    ServerName <%= @vhost %>
    ServerAdmin noc@wikimedia.org
    # https://httpoxy.org/
    RequestHeader unset Proxy early
    SSLEngine On
    SSLCertificateFile /etc/acmecerts/icinga/live/ec-prime256v1.chained.crt
    SSLCertificateKeyFile /etc/acmecerts/icinga/live/ec-prime256v1.key
    SSLCertificateFile /etc/acmecerts/icinga/live/rsa-2048.chained.crt
    SSLCertificateKeyFile /etc/acmecerts/icinga/live/rsa-2048.key
    <%= @ssl_settings.join("\n    ") %>

    DocumentRoot /usr/share/icinga/htdocs

    <Directory />
        Order deny,allow
        Deny from all
    </Directory>
    <Directory /usr/lib/cgi-bin/icinga>
        SSLRequireSSL
        Options ExecCGI
        AllowOverride None

        <Files extinfo.cgi>
              AuthName "External Monitoring access"
              AuthType Basic
              AuthBasicProvider file
              AuthUserFile "<%= @auth_user_file %>"
              allow from <%= @allow_from.join(' ') %>
              <RequireAll>
                  # probably overkill checking the ip twice
                  require ip <%= @allow_from.join(' ') %>
                  require valid-user
              </RequireAll>
        </Files>
    </Directory>

    ErrorLog /var/log/apache2/icinga_<%= @vhost %>.log
    LogLevel warn
</VirtualHost>
