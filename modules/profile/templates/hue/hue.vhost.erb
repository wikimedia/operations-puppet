# vim: filetype=apache

<VirtualHost *:80>
    ServerName <%= @server_name %>
    ServerSignature Off

    # Not used since this VHost will only act as proxy,
    # but it is needed to avoid error messages in the httpd
    # logs and logrotate crons.
    DocumentRoot /var/www

    <Directory />
        Options FollowSymLinks
        AllowOverride None
        Require all denied
    </Directory>

    CustomLog /var/log/apache2/<%= @server_name %>-access.log wmf
    ErrorLog /var/log/apache2/<%= @server_name %>-error.log

    LogLevel warn

    # Serve static contents directly from httpd,
    # rather than having the Hue backend doing it.
    Alias /static/ /usr/lib/hue/build/static/

    <Directory /usr/lib/hue/build/static>
        Require all granted
    </Directory>

    # ProxyPreserveHost is needed to avoid CSRF errors like
    # "Referer checking failed -
    #   https://<%= @server_name %>/accounts/[..cut..]/list_oozie_coordinators/
    #   does not match https://localhost:<%= @hue_port %>/"
    # ProxyPassReverse is also special since it matches https responses,
    # probably due to the secure_proxy_ssl_header=true hue option.
    ProxyPreserveHost On
    ProxyPass /static/ !
    ProxyPass / http://localhost:<%= @hue_port %>/
    ProxyPassReverse / https://localhost:<%= @hue_port %>/
</VirtualHost>
