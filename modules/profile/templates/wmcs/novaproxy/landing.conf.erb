map $http_upgrade $connection_upgrade {
        default upgrade;
        ''      close;
}

server {
    # Serve both HTTP and HTTPS
    listen 443 ssl http2 default_server;

    ssl_certificate /etc/acmecerts/<%= @acme_certname %>/live/ec-prime256v1.chained.crt;
    ssl_certificate_key /etc/acmecerts/<%= @acme_certname %>/live/ec-prime256v1.key;

    <%= @ssl_settings.join("\n    ") %>

    server_name wmcloud.org www.wmcloud.org wmflabs.org www.wmflabs.org;
    location / {
        rewrite ^/(.*)$ https://wikitech.wikimedia.org/wiki/Help:Cloud_Services_introduction;
    }
}
