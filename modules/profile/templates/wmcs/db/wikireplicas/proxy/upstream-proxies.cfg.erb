# Note: This file is managed by puppet.
<% @haproxy_vips.each_pair do |section, ip| -%>
listen mariadb-<%= @section %>
    bind <%= @ip %>:3306
    mode tcp
    option tcplog
    balance roundrobin
    option log-health-checks
    log /dev/log local0 crit
    option tcpka
    option mysql-check user haproxy
<% @section_backends[section].each do |name, backend| -%>
    server <%= name %> <%= backend %>:<%= @section_ports[section] %> weight 1 %> check inter 3s fall 20 rise 99999999
<% end -%>
<% end -%>
