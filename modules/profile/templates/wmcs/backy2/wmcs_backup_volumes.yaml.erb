ceph_pool: <%= @ceph_volume_pool %>
live_for_days: 8

exclude_volumes:
  cloudinfra-nfs:
    - scratch
  admin-monitoring:
    - ".*"
  tools:
    # When creating a new ToolsDB replica, we create big temp volumes that
    # we don't need to back up
    # https://wikitech.wikimedia.org/wiki/Portal:Data_Services/Admin/ToolsDB
    - "^temp.*$"
    - "^.*temp$"
  video:
    - ".*"
# T300160
  maps:
    - ".*"
  dumps:
    - ".*"
# T297446 -- wikiwho has two 5 TB volumes
  wikiwho:
    - ".*"


# new hosts cloudbackup200[34] only backing up testlabs for testing
project_assignments:
  ALLOTHERS: cloudbackup2001
  tools: cloudbackup2002
  paws: cloudbackup2002
  clouddb-services: cloudbackup2002
  testlabs: cloudbackup2003
  testlabs: cloudbackup2004
