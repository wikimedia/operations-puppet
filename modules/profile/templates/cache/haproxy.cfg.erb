# Note: This file is managed by puppet.
<%
    htsets = @facts['numa']['device_to_htset'][@numa_iface]
    num_threads = htsets.flatten.size
-%>
global
    user haproxy
    group haproxy
    stats socket <%= @socket %> mode 600 expose-fd listeners level admin
    log /var/lib/haproxy/dev/log local0 info
    <%- if @use_benthos -%>
    log <%= @benthos_socket %> len <%= @log_length %> format rfc5424 local0 info
    tune.http.logurilen 2048
    <%- end -%>
    # do not keep old processes longer than 5m after a reload
    hard-stop-after 5m
    set-dumpable
    nbthread <%= num_threads %>


defaults
    mode       http
    <%- if @extended_logging -%>
    log-format "%rt %Tr %Tw %Tc %ST {%[capture.req.hdr(0)]} {%[capture.res.hdr(0)]} %ts"
    log-format-sd %{+E}o\ [benthoslog\ haproxy_pid=\"%pid\"\ ip=\"%ci\"\ sequence=\"%ID\"\ accept_date=\"%tr\"\ time_backend_response=\"%Tr\"\ http_status=\"%ST\"\ response_size=\"%B\"\ termination_state=\"%ts\"\ uri_host=\"%[capture.req.hdr(0)]\"\ referer=\"%[capture.req.hdr(1)]\"\ user_agent=\"%[capture.req.hdr(2)]\"\ accept_language=\"%[capture.req.hdr(3)]\"\ range=\"%[capture.req.hdr(4)]\"\ accept=\"%[capture.req.hdr(5)]\"\ tls=\"%[capture.req.hdr(6)]\"\ cache_status=\"%[capture.res.hdr(0)]\"\ content_type=\"%[capture.res.hdr(1)]\"\ x_analytics=\"%[capture.res.hdr(2)]\"\ x_cache=\"%[capture.res.hdr(3)]\"\ backend=\"%[capture.res.hdr(4)]\"\ http_method=\"%HM\"\ uri_path=\"%HPO\"\ uri_query=\"%HQ\"]
    <%- else -%>
    log-format "%rt %Tr %Tw %Tc %ST %hr %hs %ts"
    <%- end -%>
    option     dontlognull
    option     accept-invalid-http-request
    option     accept-invalid-http-response
    option     http-ignore-probes
    retries    1
    timeout    connect 50000
    timeout    client 500000
    timeout    server 500000
