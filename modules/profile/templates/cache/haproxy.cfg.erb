# Note: This file is managed by puppet.
<%
    htsets = @facts['numa']['device_to_htset'][@numa_iface]
    num_threads = htsets.flatten.size
-%>
global
    user haproxy
    group haproxy
    stats socket <%= @socket %> mode 600 expose-fd listeners level admin
    log /var/lib/haproxy/dev/log local0 info
    <%- if @use_benthos -%>
    log <%= @benthos_socket %> len <%= @log_length %> format rfc3164 local0 info
    <%- end -%>
    # do not keep old processes longer than 5m after a reload
    hard-stop-after 5m
    set-dumpable
    nbthread <%= num_threads %>


defaults
    mode       http
    <%- if @extended_logging -%>
    log-format "%rt %Tr %Tw %Tc %ST {%[capture.req.hdr(0)]} {%[capture.res.hdr(0)]} %ts newlog %ci:%cp %ID [%tr] %ft %b/%s %TR/%Tw/%Tc/%Tr/%Ta %ST %B %CC %CS %tsc %ac/%fc/%bc/%sc/%rc %sq/%bq %hr %hs %HM %HPO %HQ"
    <%- else -%>
    log-format "%rt %Tr %Tw %Tc %ST %hr %hs %ts"
    <%- end -%>
    option     dontlognull
    option     accept-invalid-http-request
    option     accept-invalid-http-response
    option     http-ignore-probes
    retries    1
    timeout    connect 50000
    timeout    client 500000
    timeout    server 500000
