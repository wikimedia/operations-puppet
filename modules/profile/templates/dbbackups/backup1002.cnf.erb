  #   host: 'es1032.eqiad.wmnet'
  # es2:
  #   host: 'es1033.eqiad.wmnet'
  # es3:
  #   host: 'es1034.eqiad.wmnet'
  es4:
    host: 'es1022.eqiad.wmnet'
    threads: 2
    regex: '.*\.blobs_cluster28'
  es5:
    host: 'es1025.eqiad.wmnet'
    threads: 2
    regex: '.*\.blobs_cluster29'
  es6:
    host: 'es1036.eqiad.wmnet'
    threads: 2
  es7:
    host: 'es1040.eqiad.wmnet'
    threads: 2
