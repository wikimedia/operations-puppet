# file managed by puppet: modules/profile/templates/initscripts/prometheus-openstack-exporter.systemd.erb
[Unit]
Description=prometheus openstack exporter

[Service]
Type=simple
Restart=always
ExecStart=/usr/local/sbin/prometheus-openstack-exporter-wrapper --web.listen-address=":<%= @listen_port %>" --disable-slow-metrics <%= @cloud %>
ProtectSystem=full
ProtectHome=read-only
PrivateTmp=true
StandardOutput=null

[Install]
WantedBy=multi-user.target
