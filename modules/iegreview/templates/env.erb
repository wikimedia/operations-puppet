; PHP PDO database connection data source name
DB_DSN="mysql:host=<%= @mysql_host %>;dbname=<%= @mysql_db %>;charset=utf8"

; PHP PDO database connection user name
DB_USER=<%= scope['::passwords::mysql::iegreview::app_user'] %>

; PHP PDO database connection password
DB_PASS="<%= scope['::passwords::mysql::iegreview::app_password'] %>"

; Log message output file or udp2log uri
LOG_FILE=<%= @log_dest %>

; SMTP relay for outgoing email messages
SMTP_HOST=<%= @smtp_host %>

; Parsoid API url for parsing wikitext into HTML
PARSOID_URL=<%= @parsoid_url %>

; Directory for apache to write twig template and parsoid cache files
CACHE_DIR=<%= @cache_dir %>
