<VirtualHost *:80>
  ServerName <%= @hostname %>

  DocumentRoot <%= @deploy_dir %>/public

  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

  <Directory <%= @deploy_dir %>/public>
    Options Indexes FollowSymLinks
    AllowOverride None
    Require all granted
  </Directory>

  <Location />
    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule .* index.php/$0 [L,PT]
  </Location>

</VirtualHost>
