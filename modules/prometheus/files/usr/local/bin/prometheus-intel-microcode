# Usage: prometheus-intel-microcode [outfile]

outfile="${1:-/var/lib/prometheus/node.d/intel_microcode.prom}"

current="$(mawk '/microcode/ { printf "0x%x\n", $3; exit }' /proc/cpuinfo)"
available="$(iucode-tool -tb -lS /lib/firmware/intel-ucode/* 2> /dev/null | mawk 'NR>1 { printf "0x%x\n", $9 ; exit }')"

if [ "${current}" = "${available}" ]; then
	reboot_needed=0
else
	reboot_needed=1
fi

cat <<EOF > "$outfile.$$"
# HELP intel_microcode_reboot_needed This host needs to be rebooted to update microcode
# TYPE intel_microcode_reboot_needed gauge
intel_microcode_reboot_needed{current="${current}", available="${available}"} $reboot_needed
EOF

mv "$outfile.$$" "$outfile"
