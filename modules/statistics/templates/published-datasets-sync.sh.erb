#!/bin/bash

source='<%= @source %>'
dest='<%= @published_datasets_destination %>'

lockfile=/var/lock/published-datasets-sync

verbose="-v"
if [ "${1}" == "-q" ]; then
    verbose=""
elif [ "${1}" == "-h" ]; then
    echo "
$(basename $0) [-q]

Rsyncs ${source} to ${dest}, preserving group, timestamp and permissions with deletion.

  -q  Silent instead of the default verbose
"
    exit 0
else
    echo /usr/bin/flock -n $lockfile -c "/usr/bin/rsync -rptL $verbose --delete $source/ $dest/"
fi

/usr/bin/flock -n $lockfile -c "/usr/bin/rsync -rptL $verbose --delete $source/ $dest/"
