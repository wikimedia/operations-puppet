#!/bin/bash
set -e
if [ -z $1 ]; then
    echo "Depooling <%= scope.lookupvar('fqdn') %> from all services..."
    confctl --quiet select 'name=<%= scope.lookupvar('fqdn') %>' set/pooled=inactive
else
    echo "Depooling <%= scope.lookupvar('fqdn') %> from $1..."
    confctl --quiet select "${1},name=<%= scope.lookupvar('fqdn') %>" set/pooled=inactive
fi
