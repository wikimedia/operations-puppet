#!/bin/bash
set -e
if [ -z $1 ]; then
    echo "Pooling <%= scope.lookupvar('fqdn') %> from all services..."
    confctl --quiet --find --action set/pooled=yes '<%= scope.lookupvar('fqdn') %>'
else
    echo "Pooling <%= scope.lookupvar('fqdn') %> from $1..."
    confctl --quiet select "${1},name=<%= scope.lookupvar('fqdn') %>" set/pooled=yes
fi
