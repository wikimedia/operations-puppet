    <Directory "/usr/local/apache/common/docroot/meta/w">
        <IfModule mod_php5.c>
          php_admin_flag engine on
        </IfModule>
    </Directory>
    <Directory "/usr/local/apache/common/docroot/meta/w/extensions">
        <IfModule mod_php5.c>
          php_admin_flag engine off
        </IfModule>
    </Directory>
<%= scope.function_mw_hhvm_catchall() %>
</VirtualHost>

