# This file is managed by Puppet!

# Generic server configuration
ServerRoot "/etc/apache2"
# PidFile /var/run/apache2.pid
# LockFile /var/lock/apache2/accept.lock
# User apache
LockFile ${APACHE_LOCK_DIR}/accept.lock
PidFile ${APACHE_PID_FILE}
User ${APACHE_RUN_USER}
Group ${APACHE_RUN_GROUP}

ServerAdmin root@wikimedia.org

DefaultType None
HostnameLookups Off
Timeout 200

KeepAlive On
MaxKeepAliveRequests 150
KeepAliveTimeout 2

<% if @hhvm -%>
<%# HHVM is fastcgi, so we use the worker module %>
<%# TODO: look at and optimize this. MaxClients is reallistically going to be very high. %>
# MPM Worker config
StartServers          2
MinSpareThreads      25
MaxSpareThreads      75 
ThreadLimit          64
ThreadsPerChild      25
MaxClients          <%= maxclients %>
MaxRequestsPerChild   10000
<%- else -%>
<%# we use the mpm_prefork module %>
# MPM prefork config
MinSpareServers 5
MaxSpareServers 20
StartServers 10
MaxClients <%= maxclients %>
<IfDefine SLOW>
          MaxClients 5
</IfDefine>
<IfDefine SCALER>
          # Reduce TimeOut to limit the impact of LVS flapping -- TS 2008-08-19
          TimeOut 10 
</IfDefine>
MaxRequestsPerChild 300
<% end -%>


UseCanonicalName On
TypesConfig /etc/mime.types
HostnameLookups Off

# Include all modules
Include mods-enabled/*.load
Include mods-enabled/*.conf

# This listens on port 80 by default and defines NameVirtualHost *:80
Include ports.conf

## MW-Specific configs

# Log errors to syslog, will be directed to the log server
ErrorDocument 503 /503.html
ErrorDocument 404 /w/404.php
ErrorLog syslog
LogLevel notice
LogFormat "%h %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\"" combined
LogFormat "%h %l %u %t \"%r\" %>s %b" common
LogFormat "%{Referer}i -> %U" referer
LogFormat "%{User-agent}i" agent


DirectoryIndex index.html
AccessFileName .htaccess

<%= if @hhvm -%>
<FilesMatch "^\.ht">
        Require all denied
</FilesMatch>
<% else -%>
<Files ~ "^\.ht">
       # TODO: fix for 2.4
    Order allow,deny
    Deny from all
    Satisfy all
</Files>
<% end -%>

# RT 1666: prevent downloading of .*~ and similar files
<%= if @hhvm -%>
<FilesMatch "(\.bak|\.old|~|#)$">
        Require all denied
</FilesMatch>
<% else -%>
<FilesMatch "(\.bak|\.old|~|#)$">
	Order allow,deny
	Deny from all
	Satisfy All
</FilesMatch>
<% end -%>

DocumentRoot "/usr/local/apache/common/docroot/default"

<Directory />
    Options FollowSymLinks
    AllowOverride None
</Directory>

<Directory "/usr/local/apache/common/docroot/default">
    Options -Indexes FollowSymLinks MultiViews
    AllowOverride None

    <% if @hhvm -%>
    Require all granted
    <% else -%>
    Order allow,deny
    Allow from all
    <% end -%>
</Directory>

# We standardize on conf-enabled in precise as well.
# NB: the apache class will install a shim in conf.d, but we don't use it.
Include conf-enabled/*.conf

Include sites-enabled/*.conf
