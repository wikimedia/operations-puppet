    <VirtualHost *:80>
    ServerName <%= srvnm %>
    DocumentRoot /home/LaTeXML/blib/script/
    PerlOptions +Parent
    <Perl>
    $ENV{PLACK_ENV} = 'production';
    </Perl>
     
    <Location />
    SetHandler perl-script
    PerlHandler Plack::Handler::Apache2
    PerlSetVar psgi_app /home/LaTeXML/blib/script/latexml.psgi
