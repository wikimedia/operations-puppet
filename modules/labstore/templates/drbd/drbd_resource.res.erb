resource <%= @name %> {

  on <%= @drbd_hosts.first %> {
    device    <%= @device %>;
    address   <%= @drbd_cluster[@drbd_hosts.first] %>:<%= @port %>;
    disk      <%= @disk %>;
    meta-disk internal;
  }

  on <%= @drbd_hosts.last %> {
    device    <%= @device %>;
    address   <%= @drbd_cluster[@drbd_hosts.last] %>:<%= @port %>;
    disk      <%= @disk %>;
    meta-disk internal;
  }
}
