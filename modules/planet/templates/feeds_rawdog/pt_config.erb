# rawdog config file for pt.planet

plugindirs plugins
splitstate yes
maxarticles 200
maxage 0
expireage 7d
keepmin 20
currentonly false
daysections true

dayformat %Y-%m-%d
timesections true
timeformat %H:%M
datetimeformat %Y-%m-%d %H:%M

pagetemplate default
itemtemplate default
feedlisttemplate default
feeditemtemplate default

outputfile /var/www/planet/pt/index.html

userefresh true
showfeeds true

numthreads 1
timeout 30s

ignoretimeouts false
showtracebacks false
verbose false

blocklevelhtml true
tidyhtml true
sortbyfeeddate true
useids true

hideduplicates id
newfeedperiod 3h

changeconfig false

