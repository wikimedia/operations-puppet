# global config for rawdog feeds
# shared among all language versions

plugindirs plugins
splitstate true
maxarticles 200
maxage 0
expireage 7d
keepmin 20
currentonly false
daysections true

dayformat %A, %d %B
timesections true
timeformat %I:%M %p
datetimeformat %H:%M, %A, %d %B

userefresh true
showfeeds true

numthreads 4
timeout 30s

ignoretimeouts false
showtracebacks false
verbose false

blocklevelhtml true
tidyhtml true
sortbyfeeddate true
useids true

hideduplicates id
newfeedperiod 3h

changeconfig false

