# global config for rawdog feeds
# shared among all language versions

plugindirs plugins
splitstate true
maxarticles 170
maxage 0
expireage 1d
keepmin 3
currentonly true
daysections true

dayformat %A, %d %B
timesections false
timeformat %I:%M %p
datetimeformat %H:%M, %A, %d %B

userefresh true
showfeeds true

numthreads 7
timeout 30s

ignoretimeouts false
showtracebacks false
verbose false

blocklevelhtml true
tidyhtml true
sortbyfeeddate true
useids true

hideduplicates id
newfeedperiod 2h

changeconfig false
