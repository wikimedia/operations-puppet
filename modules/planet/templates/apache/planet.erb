# config for planet.wikimedia.org -> redirect to page on meta
# actual *.planet language versions are in planet-language.erb

<VirtualHost *:80>
    ServerName planet.<%= @domain_name %>

    DocumentRoot /var/www/planet
    Header always set Content-Security-Policy "upgrade-insecure-requests"

    Redirect /atom.xml https://en.planet.<%= @domain_name %>/atom.xml
    Redirect /rss10.xml https://en.planet.<%= @domain_name %>/rss10.xml
    Redirect /rss20.xml https://en.planet.<%= @domain_name %>/rss20.xml

    RedirectTemp / <%= @meta_link %>
</VirtualHost>
