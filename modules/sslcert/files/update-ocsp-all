#!/bin/bash

if [ $# != 1 ]; then
    echo One argument required: the proxy hostname:port
    exit 1
fi

some_failed=0

for config in /etc/update-ocsp.d/*.conf; do
    /usr/local/sbin/update-ocsp --config $config
    if [ $? -ne 0 ]; then
        echo "OCSP update failed for $config"
        some_failed=1
    fi
done

run-parts /etc/update-ocsp.d/hooks

exit $some_failed
