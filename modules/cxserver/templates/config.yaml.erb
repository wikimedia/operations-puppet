# cxserver specific config

# JWT token
<% if @jwt_secret -%>
jwt:
  secret: '<%= @jwt_secret %>'
  algorithms: [ 'HS256' ]
<% end -%>

<% if @no_proxy_list -%>
no_proxy_list:
<% @no_proxy_list.each do |no_proxy_entry| -%>
  - <%= no_proxy_entry %>
<% end -%>
<% end -%>

mt:
  apertium:
    api: '<%= @apertium %>'
  <%- if @yandex_url -%>
  yandex:
    api: '<%= @yandex_url %>'
    key: '<%= @yandex_api_key %>'
  <%- end -%>
  <%- if @youdao_url -%>
  youdao:
    api: '<%= @youdao_url %>'
    key: '<%= @youdao_api_key %>'
  <%- end -%>

# registry to use
registry: <%= @registry %>
