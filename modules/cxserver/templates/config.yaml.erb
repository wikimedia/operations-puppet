# cxserver specific config

restbase_url: <%= @restbase_url %>

# JWT token
<% if @jwt_secret -%>
jwt:
  secret: '<%= @jwt_secret %>'
  algorithms: [ 'HS256' ]
<% end -%>

no_proxy_list:
  - <%= @restbase_host %>
  - <%= @apertium %>

mt:
  apertium:
    api: '<%= @apertium %>'
  <%- if @yandex_url -%>
  yandex:
    api: '<%= @yandex_url %>'
    key: '<%= @yandex_api_key %>'
    certificate: '/etc/ssl/certs/Certum_Trusted_Network_CA.pem'
  <% end -%>

# registry to use from config.prod.yaml
<% if @ordered_registry -%>
registry: <%= @ordered_registry %>
<% end -%>
