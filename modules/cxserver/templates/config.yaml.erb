# cxserver specific config

restbase_url: <%= @restbase_url %>

# JWT token
<% if @jwt_secret -%>
jwt:
  secret: '<%= @jwt_secret %>'
  algorithms: [ 'HS256' ]
<% end -%>

<% if @no_proxy_list -%>
no_proxy_list:
<% @no_proxy_list.each do |no_proxy_entry| -%>
  - <%= no_proxy_entry %>
<% end -%>
<% end -%>

mt:
  apertium:
    api: '<%= @apertium %>'
  <%- if @yandex_url -%>
  yandex:
    api: '<%= @yandex_url %>'
    key: '<%= @yandex_api_key %>'
  <% end -%>

# Read config from cxserver/deploy
sources: config.prod.yaml

# registry to use from config.prod.yaml
<% if @ordered_registry -%>
registry: <%= @ordered_registry %>
<% end -%>
