# Serve HHVM status info to internal clients.
# This file is managed by Puppet.

<VirtualHost *:<%= @port %>>
    DocumentRoot /var/www
    <Location />
        ProxyPass fcgi://127.0.0.1:9001/ retry=0
        <RequireAny>
            Require ip 10. <%= scope['::network::constants::all_networks'].join(' ') %>
            Require local
        </RequireAny>
    </Location>
</VirtualHost>
