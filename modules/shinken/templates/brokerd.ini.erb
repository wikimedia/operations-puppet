[daemon]
# relative from this cfg file
workdir=/var/lib/shinken
pidfile=/var/run/shinken/brokerd.pid
interval_poll=5
maxfd=1024
port=7772
<% if @ipaddress %>
host=<%= @ipaddress %>
<% else %>
host=0.0.0.0
<% end %>
user=shinken
group=shinken
idontcareaboutsecurity=0

# SSL part
use_ssl=1
certs_dir=etc/certs
ca_cert=etc/certs/ca.pem
server_cert=etc/certs/server.pem
hard_ssl_name_check=1

# Local log management.
# Enable it only if you need it
use_local_log=1
local_log=/var/log/shinken/brokerd.log
