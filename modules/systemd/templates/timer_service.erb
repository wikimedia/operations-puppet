[Unit]
Description=<%= @description %>
Documentation=<%= @monitoring_notes_url %>
<%- if @after -%>
After=<%= @after %>
<%- end -%>
<% unless @path_exists.nil? -%>
ConditionPathExists=<%= @path_exists %>
<%- end -%>

[Service]
Type=oneshot
User=<%= @user %>
<%- if @group %>
Group=<%= @group %>
<%- end -%>
<%- if @private_tmp %>
PrivateTmp=true
<%- end -%>
<%- if @environment -%>
<%- @environment.keys.sort.each do |key| -%>
Environment="<%= key -%>=<%= @environment[key] %>"
<%- end -%>
<%- end -%>
<%- if @environment_file -%>
EnvironmentFile=<%= @environment_file %>
<%- end -%>
<%- if @syslog_identifier -%>
SyslogIdentifier=<%= @syslog_identifier %>
<%- end -%>
<%- if @slice -%>
Slice=<%= @slice %>
<%- end -%>
<%- if @timeout_start_sec -%>
TimeoutStartSec=<%= @timeout_start_sec %>
<%- end -%>
<%- if @send_mail -%>
SyslogIdentifier=<%= @command.split(' ')[0].split('/')[-1] %>
ExecStart=<% if @ignore_errors %>-<% end %>/usr/local/bin/systemd-timer-mail-wrapper --subject <%= @title %> --mail-to <%= @send_mail_to %><% if @send_mail_from -%> --mail-from <%= @send_mail_from %><% end %><% if @send_mail_only_on_error -%> --only-on-error<% end %> <%= @command %>
<%- else -%>
ExecStart=<% if @ignore_errors %>-<% end %><%= @command %>
<%- end -%>
<%- if @exec_start_pre -%>
ExecStartPre=<%= @exec_start_pre %>
<%- end -%>
<%- if @max_runtime_seconds -%>
RuntimeMaxSec=<%= @max_runtime_seconds %>
<%- end -%>
<%- if @stdin -%>
StandardInput=<%= @stdin %>
<%- end -%>
<%- if @stdout -%>
StandardOutput=<%= @stdout %>
<%- end -%>
<%- if @stderr -%>
StandardError=<%= @stderr %>
<%- end -%>
<%- if @working_directory -%>
WorkingDirectory=<%= @working_directory %>
<%- end -%>
<%- unless @success_exit_status.empty? -%>
SuccessExitStatus=<%= @success_exit_status.join(' ') %>
<%- end -%>
