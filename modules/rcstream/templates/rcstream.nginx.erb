# Nginx reverse-proxy for RCStream
# See <http://siriux.net/2013/06/nginx-and-websockets/>.
# Requires Nginx 1.4+.

upstream websockets {
    ip_hash;
    <% @backends.each do |backend| -%>
    server <%= if backend.to_s.include?(':') then backend else "127.0.0.1:#{backend}" end %>;
    <% end %>
}

server {
    <%= Array(@listen).map { |bind| "listen #{bind};" }.join("\n") %>
    server_name <%= @server_name %>;

    <%- if @use_ssl -%>
    ssl_certificate /etc/ssl/certs/<%= @server_name %>.pem
    ssl_certificate_key /etc/ssl/private/<%= @server_name %>.key
    <% end %>

    location <%= @location %> {
        <%- if @location != '/' -%>
        rewrite <%= @location %>(/.*)$ $1 break;
        <%- end -%>

        proxy_pass http://websockets;
        proxy_http_version 1.1;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
