address:
  socket_address:
    address: 0.0.0.0
    port_value: <%= @redir_port %>
filter_chains:
  - filters:
    - name: envoy.http_connection_manager
      config:
        codec_type: auto
        stat_prefix: ingress_http
        route_config:
          virtual_hosts:
            - name: backend
              domains: ["*"]
              routes:
              - match:
                  prefix: "/"
                redirect:
                  path_redirect: "/"
                  https_redirect: true
        http_filters:
          - name: envoy.router
            config: {}
