#!/bin/sh

# Avoid running hooks if experimental is not specified
if [ "${EXPERIMENTAL}" = "yes" ]; then
	cat > /etc/apt/sources.list.d/<%= @distribution %>-experimental.list <<-'EOF'
	deb <%= @upstream_mirror %> <%= @distribution %> experimental
	deb-src <%= @upstream_mirror %> <%= @distribution %> experimental
EOF
	cat > /etc/apt/preferences.d/<%= @distribution %>-experimental.pref <<-'EOF'
	Package: *
	Pin: release a=<%= @distribution %>,c=experimental
	Pin-Priority: 500
EOF
	apt-get update
fi
