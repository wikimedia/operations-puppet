modules {
  module {
    name = 'diskstat'
    language = 'python'

    param devices {
	  value = '<%= @opts.fetch('devices', 'sda') %>'
    }

    #param device-mapper {
    #  value = 'true'
    #}
  }
}

collection_group {
  collect_every = <%= @opts.fetch('collect_every', 60) %>
  time_threshold = <%= @opts.fetch('time_threshold', 60) %>

  metric {
    name_match = "diskstat_(.+)"
  }
}

