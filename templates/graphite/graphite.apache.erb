# Apache configuration for graphite.wikimedia.org
# This file is managed by Puppet.
<VirtualHost *:80>
    ServerName <%= @hostname %>

    <Location />
        Order allow,deny
        Allow from all

<%= @apache_auth -%>

        # uWSGI reverse-proxy
        uWSGIsocket /var/run/graphite-web/graphite-web.sock
        SetHandler uwsgi-handler
    </Location>

    <Location /render>
        Satisfy Any
        Allow from all
    </Location>

</VirtualHost>
