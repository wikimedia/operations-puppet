# Apache configuration for graphite.wikimedia.org
# This file is managed by Puppet.
<VirtualHost *:80>
    ServerName <%= @hostname %>

    <Location />
        Order allow,deny
        Allow from all

<%= @apache_auth -%>
        ProxyPass http://127.0.0.1:8383/
    </Location>

    <Location ~ "/(render|metrics|events/get_data)">
        Satisfy Any
        Allow from all
    </Location>

</VirtualHost>
