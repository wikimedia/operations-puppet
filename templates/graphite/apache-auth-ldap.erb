        # LDAP authentication
        AuthName "<%= @auth_realm %>"
        AuthType Basic
        AuthBasicProvider ldap
        AuthLDAPBindDN <%= @ldap_binddn %>
        AuthLDAPBindPassword <%= @ldap_bindpass %>
        AuthLDAPURL "<%= @ldap_authurl %>"
        <% ldap_groups.each do |group| -%>
        Require ldap-group <%= group %>
        <% end -%>
