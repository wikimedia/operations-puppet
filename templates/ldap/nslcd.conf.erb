# /etc/nslcd.conf
# nslcd configuration file. See nslcd.conf(5)
# for details.

# The user and group nslcd should run as.
uid nslcd
gid nslcd

# The location at which the LDAP server(s) should be reachable.
uri <% servernames.each do |servername| -%>ldap://<%= servername %>:389 <% end -%>

# The search base that will be used for all queries.
base <%= basedn %>

# The DN to bind with for normal lookups.
binddn cn=proxyagent,ou=profile,<%= basedn %>
bindpw <%= proxypass %>

# SSL options.
ssl start_tls
tls_reqcert demand
tls_cacertdir /etc/ssl/certs
tls_cacertfile /etc/ssl/certs/<%= ldap_ca %>

# Limit user names to this regex. This needs to be kept in sync with OpenStackManager's regex.
<% if scope.function_versioncmp(lsbdistrelease, "12.04") > 0 %>validnames /^[a-z][a-z0-9\-_]*$/<% end %>

# Group mapping for sudo-ldap.
<% if scope.function_versioncmp(lsbdistrelease, "12.04") < 0 %>map group uniquemember member<% end %>
<% if realm == "labs" %>map passwd loginshell "/bin/bash"<% end %>
