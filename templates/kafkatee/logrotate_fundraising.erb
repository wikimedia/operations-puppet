# Rotate anything in <%= @log_directory %>/*.log daily
<%= @log_directory %>/*.log {
	daily
	olddir <%= @log_directory %>/archive
	notifempty
	nocreate
	maxage 90
	rotate 1000
	dateext
	compress
	delaycompress
	postrotate
		service kafkatee reload
	endscript
}
