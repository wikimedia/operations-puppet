# This file is managed by Puppet!

[DEFAULT]
#cert_file = /etc/ssl/certs/swift.pem
#key_file = /etc/ssl/private/swift.key
bind_port = <%= scope.lookupvar("swift::proxy::config::cluster_settings['bind_port'])" %>
workers = <%= scope.lookupvar("swift::proxy::config::cluster_settings['num_workers'])" %>
user = swift

[pipeline:main]
pipeline = rewrite healthcheck cache swauth proxy-server

[app:proxy-server]
use = egg:swift#proxy
allow_account_management = true

#[filter:tempauth]
#use = egg:swift#tempauth
#user_system_root = testpass .admin http://copper.wikimedia.org:8080/v1/AUTH_system

[filter:swauth]
use = egg:swauth#swauth
default_swift_cluster = local#<%= scope.lookupvar("swift::proxy::config::cluster_settings['proxy_address'])" %>/v1
set log_name = swauth
super_admin_key = <%= scope.lookupvar("swift::proxy::config::cluster_settings['super_admin_key'])" %>

[filter:healthcheck]
use = egg:swift#healthcheck

[filter:cache]
use = egg:swift#memcache
memcache_servers = <%= scope.lookupvar("swift::proxy::config::cluster_settings['memcached_servers'])".join(",") %>

[filter:rewrite]
# the auth system turns our login and key into an account / token pair.
# the account remains valid forever, but the token times out.
account = <%= scope.lookupvar("swift::proxy::config::cluster_settings['rewrite_account'])" %>
url = <%= scope.lookupvar("swift::proxy::config::cluster_settings['rewrite_url'])" %>
login = <%= scope.lookupvar("swift::proxy::config::cluster_settings['rewrite_user'])" %>
#FIXME: pull into passwords file and use a real password
key = <%= scope.lookupvar("swift::proxy::config::cluster_settings['rewrite_password'])" %>
# the name of the scaler cluster.
thumbhost = <%= scope.lookupvar("swift::proxy::config::cluster_settings['rewrite_thumb_server'])" %>
# upload doesn"t like our User-agent (Python-urllib/2.6), otherwise we could call it using urllib2.urlopen()
user_agent = Mozilla/5.0
# uncomment this if we want to write the 404 handler"s output into Swift.
writethumb=yes

paste.filter_factory = wmf.rewrite:filter_factory

