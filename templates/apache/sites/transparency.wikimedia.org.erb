# vim:ft=apache: ts=4 sw=4
# Apache configuration for <http://transparency.wikimedia.org>
# This file is managed by Puppet.
<VirtualHost *:80>
    ServerName transparency.wikimedia.org
    DocumentRoot <%= @docroot %>

    <Directory />
        AllowOverride None
    </Directory>

    <Directory <%= @docroot %>>
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>

    # Serve 404s for all requests until the launch, at 2014-Aug-06 09:00 UTC.
    # This code can be removed any time after that. --OL
    RewriteEngine on
    RewriteCond %{ENV:REDIRECT_STATUS} !=404
    RewriteCond %{TIME} <<%= Time.utc(2014, 'Aug', 6, 9).strftime('%Y%m%d%H%M%S') %>
    RewriteRule .* - [L,R=404]
</VirtualHost>
