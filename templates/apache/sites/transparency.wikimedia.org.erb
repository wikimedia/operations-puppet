# vim:ft=apache: ts=4 sw=4
# Apache configuration for <http://transparency.wikimedia.org>
# This file is managed by Puppet.
<VirtualHost *:80>
    ServerName transparency.wikimedia.org
    DocumentRoot <%= @site_path %>

    <Directory />
        AllowOverride None
    </Directory>

    <Directory <%= @site_path %>
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>
</VirtualHost>
