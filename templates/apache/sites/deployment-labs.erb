<VirtualHost *:80>
    ServerName <%= @deployment_server %>
    ServerAdmin noc@wikimedia.org
    DocumentRoot /srv/deployment

    <Directory /srv/deployment>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Order allow,deny
        allow from 10.0.0.0/8
    </Directory>

    LogLevel warn
    ErrorLog /var/log/apache2/<%= @deployment_server %>_error.log
    CustomLog /var/log/apache2/<%= @deployment_server %>_access.log combined
    ServerSignature Off
</VirtualHost>
