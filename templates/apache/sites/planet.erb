# make all planet requests go to http instead of ssl
# <-from old planet, changes once we get a star cert

<VirtualHost *:443>
	ServerName <%= wikistats_host %>
	SSLEngine on
	SSLCertificateFile /etc/ssl/certs/star.wikimedia.org.crt
	SSLCertificateKeyFile /etc/ssl/private/star.wikimedia.org.key

	RewriteEngine on
	RewriteRule (.*) http://%{HTTP_HOST}%{REQUEST_URI} [R=301]
</VirtualHost>

<VirtualHost *:80>
	ServerName <%= wikistats_host %>
	php_admin_flag engine off

	DocumentRoot /var/www/planet

	<Directory /var/www/planet>
		Allow from all
		Redirect /atom.xml http://en.<%= wikistats_host %>/atom.xml
		Redirect /rss10.xml http://en.<%= wikistats_host %>/rss10.xml
		Redirect /rss20.xml http://en.<%= wikistats_host %>/rss20.xml
	</Directory>
</VirtualHost>

