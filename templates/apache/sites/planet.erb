# make all planet requests go to http instead of ssl
# <-from old planet, changes once we get a star cert

<VirtualHost *:443>
	ServerName planet.<%= planet_domain_name %>
	SSLEngine on
	SSLCertificateFile /etc/ssl/certs/star.<%= planet_domain_name %>.crt
	SSLCertificateKeyFile /etc/ssl/private/star.<%= planet_domain_name %>.key

	RewriteEngine on
	RewriteRule (.*) http://%{HTTP_HOST}%{REQUEST_URI} [R=301]
</VirtualHost>

<VirtualHost *:80>
	ServerName planet.<%= planet_domain_name %>
	php_admin_flag engine off

	DocumentRoot /var/www/planet

	<Directory /var/www/planet>
		Allow from all
		Redirect /atom.xml http://en.planet.<%= planet_domain_name %>/atom.xml
		Redirect /rss10.xml http://en.planet.<%= planet_domain_name %>/rss10.xml
		Redirect /rss20.xml http://en.planet.<%= planet_domain_name %>/rss20.xml
	</Directory>
</VirtualHost>

