<VirtualHost *:80>
	ServerName <%= ganglia_servername %>
	ServerAlias <%= ganglia_serveralias %>
	DocumentRoot /var/www
	ServerAdmin root@wikimedia.org

	<Directory "/var/www/">
	Options FollowSymLinks
	AllowOverride None
	Order allow,deny
	Allow from all
	</Directory>

	Alias /2.2.0 /srv/org/wikimedia/gangliaweb
	Alias /latest /srv/org/wikimedia/gangliaweb

	RedirectMatch ^/$ http://<%= ganglia_servername %>/latest
	ErrorLog /var/log/apache2/error.log
	LogLevel warn
</VirtualHost>
