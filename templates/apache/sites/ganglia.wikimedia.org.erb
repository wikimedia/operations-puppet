<VirtualHost *:80>
	ServerName <%= ganglia_servername %>
	ServerAlias <%= ganglia_serveralias %>
	DocumentRoot /var/www
	ServerAdmin root@wikimedia.org

	<Directory "<%= ganglia_webdir %>">
	## temp until security issues resolved
	AuthName "ganglia Access"
	AuthType Basic                                                                                     
	AuthUserFile /etc/apache2/htaccess.tmp                                                             
	Require valid-user   

	Options FollowSymLinks
	AllowOverride None
	Order allow,deny
	Allow from all
	</Directory>

	Alias /2.2.0 <%= ganglia_webdir %>
	Alias /latest <%= ganglia_webdir %>

	RedirectMatch ^/$ http://<%= ganglia_servername %>/latest
	ErrorLog /var/log/apache2/error.log
	LogLevel warn
</VirtualHost>
<VirtualHost *:443>
	ServerName <%= ganglia_servername %>
	ServerAlias <%= ganglia_serveralias %>
	DocumentRoot /var/www
	ServerAdmin root@wikimedia.org

	SSLEngine on
	SSLCertificateFile <%= ganglia_ssl_cert %>
	SSLCertificateKeyFile <%= ganglia_ssl_key %>

	<Directory "<%= ganglia_webdir %>">
	## temp until security issues resolved
	AuthName "ganglia Access"
	AuthType Basic                                                                                     
	AuthUserFile /etc/apache2/htaccess.tmp                                                             
	Require valid-user   

	Options FollowSymLinks
	AllowOverride None
	Order allow,deny
	Allow from all
	</Directory>

	Alias /2.2.0 <%= ganglia_webdir %>
	Alias /latest <%= ganglia_webdir %>

	RedirectMatch ^/$ https://<%= ganglia_servername %>/latest
	ErrorLog /var/log/apache2/error.log
	LogLevel warn
</VirtualHost>
