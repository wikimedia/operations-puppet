#!/bin/bash

pw=<%= scope.lookupvar('passwords::mysql::querydigest::mysql_ops_db') %>
mysql_user=<%= mysql_user %>
digest_host=<%= digest_host %>
digest_db=<%= digest_db %>
hostname=$(hostname)
log=/a/sqldata/${hostname}-slow.log

/usr/bin/pt-query-digest --review h=${digest_host},D=${digest_db},t=${hostname}_query_review,u=${mysql_user},p=${pw} --create-review-table --review-history h=${digest_host},D=${digest_db},t=${hostname}_query_review_history,u=${mysql_user},p=${pw} --create-review-history-table --noreport $log

> $log
