#!/bin/bash

CURRENT_DIR=`pwd`
INSTALL_DIR=/opt/wmf-mariadb10

case "$1" in
    start)
        cd INSTALL_DIR
        $INSTALL_DIR/bin/mysqld_multi start 1-7
        cd CURRENT_DIR
        ;;
    stop)
        cd INSTALL_DIR
        $INSTALL_DIR/bin/mysqld_multi stop 1-7
        cd CURRENT_DIR
        ;;
    status)
        cd INSTALL_DIR
        $INSTALL_DIR/bin/mysqld_multi report
        cd CURRENT_DIR
        ;;
    *)
        echo $"Usage: $0 {start|stop|status}"
        exit 1
esac
exit 0
