-- wikiadmin 10.%

GRANT PROCESS, REPLICATION CLIENT
    ON *.* TO 'wikiadmin'@'10.%'
    IDENTIFIED BY '<%= @wikiadmin_pass %>';

GRANT ALL PRIVILEGES
    ON `%wik%`.* TO 'wikiadmin'@'10.%';

GRANT ALL PRIVILEGES
    ON `centralauth`.* TO 'wikiadmin'@'10.%';

GRANT SELECT
    ON `heartbeat`.`heartbeat` TO 'wikiadmin'@'10.%';

