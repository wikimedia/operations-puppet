gerrituser = "<%= scope.lookupvar('gerrit::gerrit_config::gerrit_username') %>"
gerritpass = "<%= scope.lookupvar('gerrit::gerrit_config::gerrit_pass') %>"
rtresturl = "https://rt.wikimedia.org/REST/1.0/"
sshhost = "<%= scope.lookupvar('gerrit::gerrit_config::gerrit_hostname') %>"
sshport = <%= scope.lookupvar('gerrit::gerrit_config::gerrit_sshport') %>
sshhostkeys = "/var/lib/gerrit2/.ssh/known_hosts"
sshkey = "/var/lib/gerrit2/.ssh/id_rsa"
failscore = "-1"
passscore = "+1"
approvescore = "+2"
l10nsummary = "Auto-approving/merging l10n updates"
l10nuser = "Translation updater bot (L10n-bot@translatewiki.net)"
failmessage = "Change did not pass lint check. You will need to send an amended patchset for this (see: https://labsconsole.wikimedia.org/wiki/Git#Amending_a_change). Below is the output from the lint check:\n\n"
passmessage = "Lint check passed."
debug = False
logdir = "/var/lib/gerrit2/review_site/logs"
tmpdir = "/var/lib/gerrit2/review_site/tmp"

# Files where Gerrit projects will have their notifications written to
# See manifests/gerrit.pp $ircecho_infile for actual file/channel map
filenames = {
	"operations/puppet": {
		"production" : "operations.log",
		"test"       : "labs.log",
		"default"    : "labs.log"
	},

	# WMF projects
	"mediawiki/extensions/MobileFrontend" : "mobile.log",
	"analytics/*"   : "wikimedia-dev.log",
	"integration/*" : "wikimedia-dev.log",
	"labs/*"      : "labs.log",
	"mediawiki/*" : "mediawiki.log",
	"operations/*": "operations.log",

	# SMW
	"mediawiki/extensions/Semantic*" : "semantic-mediawiki.log",
	"mediawiki/extensions/Validator" : "semantic-mediawiki.log",
	"mediawiki/extensions/Maps" : "semantic-mediawiki.log",
	"mediawiki/extensions/RDFIO" : "semantic-mediawiki.log",
	"mediawiki/extensions/SolrStore" : "semantic-mediawiki.log",
	"mediawiki/extensions/SMW*" : "semantic-mediawiki.log",

	# Wikidata
	"mediawiki/extensions/Wikidata*" : "wikidata.log",
	"mediawiki/extensions/Wikibase*" : "wikidata.log",

	"default": "mediawiki.log"
}

# These logs don't want "new comment" messages sent to them, only abandon/patchset/merge
nocommentlogs {
	"mediawiki.log"
}
