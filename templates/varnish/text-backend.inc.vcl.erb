# Varnish VCL include file for text backends

include "errorpage.inc.vcl";
include "text-common.inc.vcl";

sub vcl_recv {
	call vcl_recv_purge;
	call restrict_access;

<% if vcl_config.fetch("cluster_tier", "1") == "1" -%>
	if ( req.http.host ~ "^test\." ) {
		set req.backend = test_wikipedia;
		return (pass);
	}

<% end -%>
	call cookie_munging;

<% if vcl_config.fetch("cluster_tier", "1") == "1" -%>
	if (req.url ~ "^/w/api\.php") {
		set req.backend = api;
	} else if (req.url ~ "^/w/thumb(_handler)?\.php") {
		set req.backend = rendering;
	}
<% end -%>
	return(lookup);
}

sub vcl_miss {
	call restore_cookie;
}

sub vcl_fetch {
	/* FIXME: Fix up missing Vary headers on Apache redirects */
	if ((obj.status == 301 || obj.status == 302) && obj.http.Location ~ "^http" && obj.http.Vary !~ "X-Forwarded-Proto") {
		if (obj.http.Vary) {
			obj.http.Vary = obj.http.Vary = ",X-Forwarded-Proto"
		} else {
			obj.http.Vary = "X-Forwarded-Proto"
		}
	}

	return (deliver);
}

sub vcl_error {
	call errorpage;
	return(deliver);
}