// Varnish VCL include file for upload frontends

include "errorpage.inc.vcl";

sub vcl_recv {
	call vcl_recv_purge;
	if (req.http.referer
		&& req.url != "/"
		&& req.http.referer !~ "(?i)^https?://([-a-zA-Z0-9.]+\.)?(mediawiki|wikivoyage|wikivoyage-ev|wmflabs)\.org/"
		&& req.http.referer !~ "(?i)^https?://(maps|phabricator|wikitech)\.wikimedia\.org/"
		&& req.http.referer !~ "(?i)^https?://(localhost|127\.0\.0\.1)(:\d+)?/"
	) {
		error 403 "Access Denied";
	}

	return (lookup);
}

sub vcl_fetch {
	// Cap TTL to 1 day for now (purging still hasn't been sorted out...)
	if (beresp.ttl > 1d) {
		set beresp.ttl = 1d;
	}
	return (deliver);
}

sub vcl_error {
	call errorpage;
	return (deliver);
}
