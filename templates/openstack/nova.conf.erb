--verbose
--daemonize=1
--my_ip=<%= scope.lookupvar('openstack::nova_config::nova_my_ip') %>
--logdir=/var/log/nova
--state_path=/var/lib/nova
--lock_path=/var/lock/nova
--sql_connection=mysql://<%= scope.lookupvar('openstack::nova_config::nova_db_user') %>:<%= scope.lookupvar('openstack::nova_config::nova_db_pass') %>@<%= scope.lookupvar('openstack::nova_config::nova_db_host') %>/<%= scope.lookupvar('openstack::nova_config::nova_db_name') %>
--image_service=nova.image.glance.GlanceImageService
--s3_host=<%= scope.lookupvar('openstack::nova_config::nova_glance_host') %>
--glance_api_servers=<%= scope.lookupvar('openstack::nova_config::nova_glance_host') %>:9292
--rabbit_host=<%= scope.lookupvar('openstack::nova_config::nova_rabbit_host') %>
--cc_host=<%= scope.lookupvar('openstack::nova_config::nova_cc_host') %>
--network_host=<%= scope.lookupvar('openstack::nova_config::nova_network_host') %>
--ec2_url=http://<%= scope.lookupvar('openstack::nova_config::nova_api_host') %>:8773/services/Cloud
--ec2_dmz_host=<%= scope.lookupvar('openstack::nova_config::nova_api_ip') %>
--dmz_cidr=<%= scope.lookupvar('openstack::nova_config::nova_dmz_cidr') %>
--libvirt_type=<%= scope.lookupvar('openstack::nova_config::nova_libvirt_type') %>
--dhcpbridge_flagfile=/etc/nova/nova.conf
--dhcpbridge=/usr/bin/nova-dhcpbridge
--flat_network_dhcp_start=<%= scope.lookupvar('openstack::nova_config::nova_dhcp_start') %>
--dhcp_domain=<%= scope.lookupvar('openstack::nova_config::nova_dhcp_domain') %>
--network_manager=nova.network.manager.FlatDHCPManager
--flat_interface=<%= scope.lookupvar('openstack::nova_config::nova_network_flat_interface') %>
--flat_injected=False
--flat_network_bridge=<%= scope.lookupvar('openstack::nova_config::nova_flat_network_bridge') %>
--fixed_range=<%= scope.lookupvar('openstack::nova_config::nova_fixed_range') %>
--public_interface=<%= scope.lookupvar('openstack::nova_config::nova_network_public_interface') %>
--routing_source_ip=<%= scope.lookupvar('openstack::nova_config::nova_network_public_ip') %>
--ajax_console_proxy_url=<%= scope.lookupvar('openstack::nova_config::nova_ajax_proxy_url') %>
--auth_driver=nova.auth.ldapdriver.LdapDriver
--ldap_url=ldap://<%= scope.lookupvar('openstack::nova_config::nova_ldap_host') %>
--ldap_password=<%= scope.lookupvar('openstack::nova_config::nova_ldap_user_pass') %>
--ldap_user_dn=<%= scope.lookupvar('openstack::nova_config::nova_ldap_user_dn') %>
--ldap_user_unit=people
--ldap_user_subtree=ou=people,<%= scope.lookupvar('openstack::nova_config::nova_ldap_base_dn') %>
--ldap_project_subtree=ou=groups,<%= scope.lookupvar('openstack::nova_config::nova_ldap_base_dn') %>
--role_project_subtree=ou=groups,<%= scope.lookupvar('openstack::nova_config::nova_ldap_base_dn') %>
--ldap_cloudadmin=cn=cloudadmins,ou=groups,<%= scope.lookupvar('openstack::nova_config::nova_ldap_base_dn') %>
--ldap_itsec=cn=itsec,ou=groups,<%= scope.lookupvar('openstack::nova_config::nova_ldap_base_dn') %>
--ldap_sysadmin=cn=sysadmins,ou=groups,<%= scope.lookupvar('openstack::nova_config::nova_ldap_base_dn') %>
--ldap_netadmin=cn=netadmins,ou=groups,<%= scope.lookupvar('openstack::nova_config::nova_ldap_base_dn') %>
--ldap_developer=cn=developers,ou=groups,<%= scope.lookupvar('openstack::nova_config::nova_ldap_base_dn') %>
--node_availability_zone=<%= scope.lookupvar('openstack::nova_config::nova_zone') %>
--zone_name=<%= scope.lookupvar('openstack::nova_config::nova_zone') %>
--quota_floating_ips=<%= scope.lookupvar('openstack::nova_config::nova_quota_floating_ips') %>
--multi_host=True
--api_paste_config=/etc/nova/api-paste.ini
--use_deprecated_auth=True
#--use_ipv6=True
--allow_same_net_traffic=False
--live_migration_uri=<%= scope.lookupvar('openstack::nova_config::nova_live_migration_uri') %>
