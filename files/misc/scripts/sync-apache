#!/bin/bash

_RSYNC_FLAGS=-av
_SIMULATED=

if [[ $# == 1 -a "$1" == "--simulated" ]]; then
	_RSYNC_FLAGS="${_RSYNC_FLAGS}n"
	_SIMULATED=1
fi

echo "${_SIMULATED:+[SIMULATION] }Synchronizing /home/wikipedia/conf/httpd to /usr/local/apache/conf..."
#echo "pmtpa apaches:"

#This sync works with both puppet and non-puppet hosts
ddsh -cM -g apaches -- "
	rsync ${_RSYNC_FLAGS} 10.0.5.8::httpdconf/ /usr/local/apache/conf
	test -e /etc/apache2/apache2.conf && cp /home/wikipedia/conf/httpd/apache2.conf /etc/apache2/
"
# dont forget the image rending cluster
ddsh -cM -g image_scalers -- "
	rsync ${_RSYNC_FLAGS} 10.0.5.8::httpdconf/ /usr/local/apache/conf
	test -e /etc/apache2/apache2.conf && cp /home/wikipedia/conf/httpd/apache2.conf /etc/apache2/
"
# while we are at it, might as well do the snapshot boxen
ddsh -cM -g snapshot -- "
	rsync ${_RSYNC_FLAGS} 10.0.5.8::httpdconf/ /usr/local/apache/conf
	test -e /etc/apache2/apache2.conf && cp /home/wikipedia/conf/httpd/apache2.conf /etc/apache2/
"

# decided we want search indexers too
ddsh -cM -g searchidx -- "
	rsync ${_RSYNC_FLAGS} 10.0.5.8::httpdconf/ /usr/local/apache/conf
	test -e /etc/apache2/apache2.conf && cp /home/wikipedia/conf/httpd/apache2.conf /etc/apache2/
"
