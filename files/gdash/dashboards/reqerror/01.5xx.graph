title   "HTTP 5xx Responses -8hours"
linewidth 2
logbase 10
linemode "connected"
hide_legend "false"
from "-8hours"

field :a, :color => "red", 
   :alias => "none",
   :data  => 'cactiStyle(alias(removeBelowValue(reqstats.500,1),"500 resp/min"))'

field :b, :color => "blue",
   :alias => "none",
   :data  => 'cactiStyle(alias(removeBelowValue(reqstats.5xx,1),"5xx resp/min"))'

