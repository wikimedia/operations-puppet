title   "HTTP 5xx Responses/hour -1year"
linewidth 2
linemode "connected"
hide_legend "false"
from "-1year"

field :a, :color => "red",
               :alias => "none",
               :data  => 'cactiStyle(alias(summarize(removeBelowValue(reqstats.500,1),"1h"),"500 resp/hour"))'

field :b, :color => "blue",
               :alias => "none",
               :data  => 'cactiStyle(alias(summarize(removeBelowValue(reqstats.5xx,1),"1h"),"5xx resp/hour"))'

