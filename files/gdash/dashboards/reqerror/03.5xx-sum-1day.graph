title   "HTTP 5xx Responses -1day"
linewidth 2
logbase 10
linemode "staircase"
hide_legend "false"
from "-1 day"

field :a, :color => "blue",
               :alias => "none",
               :data  => 'cactiStyle(alias(removeBelowValue(reqstats.5xx,1),"5xx resp/min"))'

field :b, :color => "red",
               :alias => "none",
               :data  => 'cactiStyle(alias(removeBelowValue(reqstats.500,1),"500 resp/min"))'

