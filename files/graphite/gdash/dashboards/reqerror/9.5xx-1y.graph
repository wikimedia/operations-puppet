title   "HTTP 5xx Responses/hour -1year"
linewidth 2
logbase 10
linemode "connected"
hide_legend "false"
from "-1year"

field :a, :color => "red",
               :alias => "none",
               :data  => 'cactiStyle(alias(summarize(reqstats.500,"1h"),"500 resp/hour"))'

field :b, :color => "blue",
               :alias => "none",
               :data  => 'cactiStyle(alias(summarize(reqstats.5xx,"1h"),"5xx resp/hour"))'

